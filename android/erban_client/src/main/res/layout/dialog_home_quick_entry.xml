<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_top_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_quick_entry_create_room"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="创建房间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_create_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_quick_entry_create_activity"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="发布动态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_create_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_quick_entry_create_match"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="缘分速配"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_quick_entry_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@drawable/ic_quick_entry_close" />

</LinearLayout>