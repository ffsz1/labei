<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gift_record"
    android:layout_width="match_parent"
    android:layout_height="81dp">

    <LinearLayout
        android:id="@+id/ll_gift_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_6"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gift_record_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="哈哈"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="送给"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_gift_record_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="口袋"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_gift_target"
        android:background="@mipmap/gift_corner_bg_gray"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gift_record"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10" />


        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gift_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="么么么"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_gift_record_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="x1"
                    android:textColor="@color/color_ffca28"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_gift_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-07-30 22:47:58"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

    </LinearLayout>
    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@color/line_color"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_alignParentBottom="true"/>
    -->

</RelativeLayout>