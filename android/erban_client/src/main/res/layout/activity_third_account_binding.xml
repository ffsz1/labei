<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/app_tool_bar"
        style="@style/AppToolBar_white_style"
        app:title="解绑QQ" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_52">

        <TextView
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_15"
            tools:text="1388888888" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@+id/et_phone"-->
        <!--android:background="@color/color_E0E0E0" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_52">

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="@dimen/dp_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_verification_code"
            android:background="@color/color_E0E0E0" />

        <TextView
            android:id="@+id/tv_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_ffe5ef_20dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="获取验证码"
            android:textColor="@color/color_FF0066"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm_binding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/ic_confirm_binding_bg"
        android:gravity="center_horizontal|center_vertical"
        android:text="确认解绑"
        android:textColor="@color/white" />
</LinearLayout>
