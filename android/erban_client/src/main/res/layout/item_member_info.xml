<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_99"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_17"
            android:contentDescription="@null"
            android:src="@drawable/ic_default_avatar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_37353B"
                android:textSize="@dimen/text_size_18"
                tools:text="李乐尔康哈内柏贴李乐尔康哈内柏贴"/>

            <com.vslk.lbgx.ui.widget.LevelView
                android:id="@+id/level_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:visibility="invisible"/>

            <com.hncxco.library_ui.widget.DrawableTextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_2"
                android:text="族长"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:d_radius="@dimen/dp_11"
                app:drawableType="shape"
                app:soildColor="@color/color_ffe6a3f4"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_32">

                <com.hncxco.library_ui.widget.DrawableTextView
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="同意"
                    android:textColor="@color/color_9574F5"
                    app:d_radius="@dimen/dp_16"
                    app:drawableType="shape"
                    app:soildColor="@color/color_EEE9FD"/>

                <com.hncxco.library_ui.widget.DrawableTextView
                    android:id="@+id/ignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="忽略"
                    android:textColor="@color/color_F57495"
                    app:d_radius="@dimen/dp_16"
                    app:drawableType="shape"
                    app:soildColor="@color/color_FED6E4"/>

            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/dp_32"
                android:textColor="@color/color_C0BFC0"
                android:textSize="@dimen/text_size_14"
                android:visibility="invisible"
                tools:text="已同意"
                tools:visibility="visible"/>

        </FrameLayout>

    </LinearLayout>

    <View
        style="@style/divid_line_style"
        android:layout_marginStart="@dimen/dp_15"/>

</LinearLayout>