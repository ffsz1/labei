<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img_avatar"
        android:text="棒棒糖"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_send_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_alignStart="@+id/tv_user_name"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/gift_date"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="收礼人: 思思小公主"
        android:textColor="@color/color_999999" />

    <TextView
        android:id="@+id/tv_gift_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="+5"
        android:textColor="@color/color_FEC018"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gift_income"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:text="金币"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_gift_income"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/tv_gift_income" />

    <TextView
        android:id="@+id/gift_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gift_income"
        android:layout_alignRight="@id/tv_gift_income"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="111"
        android:textColor="@color/color_999999"
        android:textSize="11sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/common_divider_color" />
</RelativeLayout>
