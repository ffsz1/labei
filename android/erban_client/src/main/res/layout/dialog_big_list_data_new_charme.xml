<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/img_rankinglist_charme_top_bg">


        <RadioGroup
            android:id="@+id/rg_rich_charme_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bu_pay_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/filterselector"
                android:button="@null"
                android:checked="true"
                android:text="财富榜"
                android:textColor="@drawable/rb_insurance_filter_selector"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/bu_imcome_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/filterselector"
                android:button="@null"
                android:text="魅力榜"
                android:textColor="@drawable/rb_insurance_filter_selector"
                android:textSize="@dimen/sp_14" />
        </RadioGroup>


        <!--<TextView-->
        <!--android:id="@+id/bu_pay_tab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="@dimen/dp_5"-->
        <!--android:gravity="center"-->
        <!--android:text="财富榜"-->
        <!--android:textColor="@color/selector_contribution_rank_color"-->
        <!--android:textSize="@dimen/text_size_16" />-->

        <!--<TextView-->
        <!--android:id="@+id/bu_imcome_tab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="@dimen/dp_5"-->
        <!--android:gravity="center"-->
        <!--android:text="魅力榜"-->
        <!--android:textColor="@color/selector_contribution_rank_color"-->
        <!--android:textSize="@dimen/text_size_16" />-->

        <RelativeLayout
            android:id="@+id/rl_rg_wrap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/rg_rich_charme_top"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shape_rankinglist_rich_rg_bg_wrap"
            android:gravity="center">


            <RadioGroup
                android:id="@+id/user_rank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/shape_rankinglist_rich_rg_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_tab_day"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@drawable/rangking_charme_tab_background"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="日榜"
                    android:textColor="@drawable/rb_charme_rangking_selector" />

                <RadioButton
                    android:id="@+id/rb_tab_week"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/sp_26"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@drawable/rangking_charme_tab_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="周榜"
                    android:textColor="@drawable/rb_charme_rangking_selector" />

                <RadioButton
                    android:id="@+id/rb_tab_all"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_weight="1"
                    android:background="@drawable/rangking_charme_tab_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="总榜"
                    android:textColor="@drawable/rb_charme_rangking_selector" />

            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_below="@id/rl_top"
        android:layout_marginTop="-5dp"
        android:background="@drawable/img_rankinglist_charme_corner_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_45"
            android:background="@drawable/img_charme_paihangbang">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.095" />

            <FrameLayout
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_68"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/img_yinkuang">

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.405" />

            <FrameLayout
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_68"
                android:background="@drawable/img_jinkuang">

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.405" />

            <FrameLayout
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_68"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/img_tongkuang">

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.095" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_copper_nick"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_avatar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:text="铜榜ID名字很长的哦这么长的"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_silver_nick"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_avatar"
            android:layout_marginLeft="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center"
            android:text="银榜ID名字很长的哦这么长的"
            android:textSize="@dimen/text_size_11" />


        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_silver_nick"
            android:layout_marginLeft="@dimen/dp_40"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_silver_golds"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_charme_love" />

            <TextView
                android:id="@+id/tv_silver_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_silver_golds"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/iv_silver_golds"
                android:text="123456789"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_copper_nick"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_copper_golds"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_charme_love" />

            <TextView
                android:id="@+id/tv_copper_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_copper_golds"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/iv_copper_golds"
                android:text="123456789"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_gold_nick"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:gravity="center"
        android:maxEms="10"
        android:text="金榜ID名字很长的哦这么长的"
        android:textSize="@dimen/text_size_11" />

    <RelativeLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gold_nick"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_gold_golds"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_charme_love" />

        <TextView
            android:id="@+id/tv_gold_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_gold_golds"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@id/iv_gold_golds"
            android:text="123456789"
            android:textSize="@dimen/text_size_13" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_center">

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/color_666666"
            android:textSize="15sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pay_income_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>