<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@drawable/shape_ffffff_top_30dp">

    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        android:text="绑定手机"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/shape_fafafa_20dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="@dimen/dp_30"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_12"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_C2C2C2"
        android:textSize="@dimen/text_size_12" />

    <FrameLayout
        android:id="@+id/fl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_45">

        <EditText
            android:id="@+id/et_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_fafafa_20dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C2C2C2"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_auth_code"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@mipmap/bg_auth_code_selected"
            android:gravity="center_vertical|center_horizontal"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_one"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/selector_login_button_bg"
        android:enabled="false"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="暂不接受未成年用户注册，请确认您已满18岁"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_11" />

</RelativeLayout>