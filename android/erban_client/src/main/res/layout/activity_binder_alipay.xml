<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:title="绑定支付宝" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="支付宝账号"
        android:textColor="#666666"
        android:textSize="14dp"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:hint="请输入手机号/电子邮箱">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="32dp"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="真实姓名"
        android:textColor="#666666"
        android:textSize="14dp"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:hint="请输入实名认证的真实姓名">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="32dp"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="手机验证码"
        android:textColor="#666666"
        android:textSize="14dp"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_20">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入手机验证码">

            <EditText
                android:id="@+id/et_smscode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:maxLength="5"
                android:paddingLeft="32dp"
                android:textColor="@color/text_color_primary"
                android:textColorHint="@color/text_color_secondary"
                android:textCursorDrawable="@null"
                android:textSize="15dp" />
        </android.support.design.widget.TextInputLayout>

        <com.hncxco.library_ui.widget.DrawableTextView
            android:id="@+id/btn_get_code"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/dp_32"
            android:gravity="center"
            android:onClick="onClick"
            android:text="获取验证码"
            android:textColor="@color/color_ffff0066"
            android:textSize="@dimen/text_size_12"
            app:d_radius="@dimen/dp_15"
            app:drawableType="shape"
            app:soildColor="@color/color_ffffe5ef" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="32dp"
        android:background="@color/line_color" />

    <com.hncxco.library_ui.widget.DrawableTextView
        android:id="@+id/btn_binder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        app:d_radius="@dimen/dp_20"
        app:drawableType="shape"
        app:soildColor="@color/color_fffdbed8" />

    <com.hncxco.library_ui.widget.DrawableTextView
        android:id="@+id/btn_binder_request"
        style="@style/TextButtonGradientStyle_RED"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:text="确认绑定"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />
</LinearLayout>
