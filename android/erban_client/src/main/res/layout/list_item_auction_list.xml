<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="11dp"
        >

        <RelativeLayout
            android:id="@+id/number_layout"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <!--<TextView
                android:id="@+id/auction_number_text"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"/>-->
            <TextView
                android:id="@+id/auction_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/auction_number_image"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


        <com.vslk.lbgx.ui.common.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_toRightOf="@id/number_layout"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffd987"
            android:textSize="13dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_marginLeft="10dp"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/coin_text"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="#ffc400"
            android:textSize="12dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_auction_corn"
            />
    </RelativeLayout>
</LinearLayout>
