<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/music_flag_layout"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="66dp"
        android:src="@mipmap/music_gray_btn"/>

    <LinearLayout
        android:id="@+id/music_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="96dp"
        android:background="@mipmap/img_music_box_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/music_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="暂无音乐播放"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/music_list_more"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:src="@mipmap/icon_music_list_more" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/music_play_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_music_pro" />

            <ImageView
                android:id="@+id/music_play_pause"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:src="@mipmap/icon_music_pause_small" />

            <ImageView
                android:id="@+id/music_play_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_music_next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="音乐"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/voice_seek"
                style="@style/MusicView"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:focusable="true"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progress="50"
                android:progressDrawable="@drawable/music_voice_seekbar"
                android:thumb="@drawable/icon_room_voice_point"
                android:thumbOffset="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="人声"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <SeekBar
                android:id="@+id/music_voice_seek"
                style="@style/MusicView"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:focusable="true"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progress="50"
                android:progressDrawable="@drawable/music_voice_seekbar"
                android:thumb="@drawable/icon_room_voice_point"
                android:thumbOffset="0dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>