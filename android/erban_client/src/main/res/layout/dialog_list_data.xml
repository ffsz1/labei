<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_list_height"
    android:background="@drawable/bg_dialog_list_data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_data_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/online_user_text"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_list_title_diver"
            android:background="@color/app_bg" />

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>