<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="256dp">

        <ImageView
            android:id="@+id/avatar_gaussian"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_shop_top_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_user_info_title_bg" />

        <com.hncxco.library_ui.widget.AppToolBar
            android:id="@+id/toolbar"
            style="@style/AppToolBar_transparent_style"
            app:leftImgRes="@mipmap/icon_nav_back"
            app:title="商城"
            app:titleColor="@color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:background="@drawable/shape_white_shop_bg"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rb_tab"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/car_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_shop_rb_tab"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="座驾"
                android:textSize="@dimen/text_size_17" />


            <RadioButton
                android:id="@+id/headwear_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shop_rb_tab"
                android:button="@null"
                android:gravity="center"
                android:text="头饰"
                android:textSize="@dimen/text_size_17" />

        </RadioGroup>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp" />
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_avatar" />

        <ImageView
            android:id="@+id/iv_headwear"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

    </android.support.v7.widget.CardView>

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:autoPlay="true" />

</RelativeLayout>