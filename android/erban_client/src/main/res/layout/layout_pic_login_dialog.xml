<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/bg_room_lock"
    android:minHeight="246dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pic_login_title"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_25"
        android:text="房间已上锁"
        android:textColor="@color/color_1A1A1A"
        android:textSize="20dp"
        android:visibility="invisible" />


    <EditText
        android:id="@+id/pic_login_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pic_login_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_f5f5f5_2dp"
        android:editable="true"
        android:focusable="true"
        android:gravity="center"
        android:hint="请输入房间密码"
        android:inputType="number"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/pic_login_fail_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_login_input"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="密码错误，请重新输入"
        android:textColor="#fe5151"
        android:textSize="@dimen/text_size_10"
        android:visibility="invisible"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_login_fail_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lock_btn_close"
            android:gravity="center"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_lock_btn_ok"
            android:gravity="center"
            android:text="解锁"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
