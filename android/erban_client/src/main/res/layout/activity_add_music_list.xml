<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#040C3F"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/transparent_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_50"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#40466D"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="@{click}"
                android:scaleType="center"
                android:src="@drawable/arrow_left_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="我的播放器"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/add_music_btn"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentEnd="true"
                android:onClick="@{click}"
                android:padding="@dimen/text_size_15"
                android:scaleType="center"
                android:src="@drawable/ic_add_music" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/music_box_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#40466D"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/music_play_pause_btn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:padding="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:onClick="@{click}"
                android:src="@mipmap/icon_music_pause" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="有一种爱叫做放手"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <!--<TextView-->
                <!--android:id="@+id/artist_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ellipsize="end"-->
                <!--android:lines="1"-->
                <!--android:textColor="#4DFFFFFF"-->
                <!--android:textSize="@dimen/text_size_13"-->
                <!--android:visibility="gone" />-->

                <SeekBar
                    android:id="@+id/voice_seek"
                    style="@style/MusicView"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:focusable="true"
                    android:maxHeight="3dp"
                    android:minHeight="3dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/music_voice_seekbar"
                    android:thumb="@drawable/icon_room_voice_point"
                    android:thumbOffset="0dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/music_adjust_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="15dp"
                android:onClick="@{click}"
                android:src="@mipmap/icon_adjust_voice" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/music_box_layout"
            android:layout_below="@id/title_layout"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_layout_music_add"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:onClick="@{click}"
                android:src="@drawable/icon_music_empty" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:gravity="center"-->
            <!--android:text="主人音乐库空了"-->
            <!--android:textColor="@color/white_alpha_50"-->
            <!--android:textSize="@dimen/text_size_13" />-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="点击右上角 可添加音乐窝~"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/text_size_15" />-->
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/music_box_layout"
            android:layout_below="@id/title_layout" />


    </RelativeLayout>
</layout>