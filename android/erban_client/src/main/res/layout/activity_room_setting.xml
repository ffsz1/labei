<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:hasLine="true"
        app:hasRightTitle="true"
        app:rightTitle="保存"
        app:title="@string/room_setting" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="房间名字"
            android:textColor="@color/color_666666" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@id/name_text"
            android:background="@null"
            android:hint="请设置房间标题"
            android:maxLength="15"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="@dimen/dp_15"
        android:visibility="gone">

        <TextView
            android:id="@+id/topic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="房间话题"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/topic_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/topic_text"
            android:hint="请设置房间话题"
            android:maxLength="20"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@id/pwd_text"
            android:background="@null"
            android:hint="请设置房间密码"
            android:inputType="number"
            android:maxLength="8"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:drawableEnd="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="房间背景"
        android:textColor="@color/text_color_primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="小礼物特效"
            android:textColor="@color/text_color_primary" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_small_gift_effect"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            app:kswBackColor="@color/color_ffff0066"
            app:kswTextAdjust="-2dp"
            app:kswTextExtra="8dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswThumbColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="坐骑特效"
            android:textColor="@color/text_color_primary" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_ride_effect"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            app:kswBackColor="@color/color_ffff0066"
            app:kswTextAdjust="-2dp"
            app:kswTextExtra="8dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswThumbColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/manager_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:drawableEnd="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="房间管理员"
        android:textColor="@color/text_color_primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/black_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:drawableEnd="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="房间黑名单"
        android:textColor="@color/text_color_primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/rl_room_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:drawableEnd="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="进入房间提示"
        android:textColor="@color/text_color_primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/label_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:text="房间类型"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/text_size_15" />

        <com.donkingliang.labels.LabelsView
            android:id="@+id/labels_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_85"
            android:layout_marginHorizontal="@dimen/dp_15"
            app:labelBackground="@drawable/bg_label"
            app:labelTextColor="@color/color_label"
            app:labelTextPaddingBottom="@dimen/dp_5"
            app:labelTextPaddingLeft="@dimen/dp_11"
            app:labelTextPaddingRight="@dimen/dp_11"
            app:labelTextPaddingTop="@dimen/dp_5"
            app:labelTextSize="@dimen/text_size_13"
            app:lineMargin="@dimen/dp_15"
            app:maxSelect="1"
            app:selectType="SINGLE"
            app:wordMargin="@dimen/dp_15" />

    </LinearLayout>

</LinearLayout>