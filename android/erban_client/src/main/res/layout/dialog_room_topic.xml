<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="340dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_ffffff_corner_15dp">

        <TextView
            android:id="@+id/tv_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:text="title"
            android:textColor="@color/text_1A1A1A"
            android:textSize="@dimen/text_size_20" />

        <ImageView
            android:id="@+id/iv_topic_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_close_dialog_room_tip" />

        <View
            android:id="@+id/v_tip_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="73dp"
            android:background="#FFF2F2F2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v_tip_line">

            <TextView
                android:id="@+id/tv_topic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:padding="15dp"
                android:textColor="@color/text_1A1A1A"
                android:textSize="13sp" />

        </ScrollView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_room_tip_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_dialog_room_voice" />
</RelativeLayout>