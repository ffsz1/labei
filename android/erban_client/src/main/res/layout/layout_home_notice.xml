<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:background="#00ffffff">


    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:drawableRight="@drawable/ic_rank_more"
        android:layout_marginTop="12dp"/>
    <ImageView
        android:id="@+id/iv_cover_1"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:layout_centerVertical="true"
        android:layout_marginRight="-5dp"
        android:layout_toLeftOf="@+id/iv_cover_2"
        android:layout_alignTop="@+id/iv_cover_3"
        android:background="@drawable/shape_stroke_white_ring"
        android:padding="1dp"/>

    <ImageView
        android:id="@+id/iv_cover_2"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:layout_centerVertical="true"
        android:layout_marginRight="-5dp"
        android:layout_toLeftOf="@+id/iv_cover_3"
        android:layout_alignTop="@+id/iv_cover_3"
        android:background="@drawable/shape_stroke_white_ring"
        android:padding="1dp"/>

    <ImageView
        android:id="@+id/iv_cover_3"
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@id/tv_notice_title"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_stroke_white_ring"
        android:padding="1dp"/>

</RelativeLayout>