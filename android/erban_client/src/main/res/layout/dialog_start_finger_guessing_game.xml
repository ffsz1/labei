<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/iv_close"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_finger_guessing_game_pk" />

    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_60"
        android:text="选择出拳"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ll_probability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_45"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_finger_guessing_game_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_25"
        android:drawableStart="@drawable/ic_finger_guessing_game_record"
        android:drawablePadding="@dimen/dp_5"
        android:text="猜拳记录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />

    <RelativeLayout
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_below="@+id/one"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_23"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_rock"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:background="@drawable/ic_finger_guessing_game_selected">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_rock" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_scissors"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_scissors" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_paper"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_paper" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:text="选择礼物"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与次数"
            android:textColor="#80ffffff" />

        <TextView
            android:id="@+id/tv_count_limit_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:textColor="@color/color_C280FF"
            tools:text="48/50" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_23"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_gift1"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:background="@drawable/ic_finger_guessing_game_selected">

            <ImageView
                android:id="@+id/iv_gift1"
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_default_avatar" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_gift1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_5"
                android:drawableStart="@drawable/ic_gold"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/color_FFD83B"
                android:textSize="@dimen/text_size_12"
                tools:text="X 12" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_gift2"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:id="@+id/iv_gift2"
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_default_avatar" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_gift2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_5"
                android:drawableStart="@drawable/ic_gold"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                tools:text="188" />

            <TextView
                android:id="@+id/tv_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/color_FFD83B"
                android:textSize="@dimen/text_size_12"
                tools:text="X 12" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_gift3"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:id="@+id/iv_gift3"
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_default_avatar" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_gift3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_5"
                android:drawableStart="@drawable/ic_gold"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                tools:text="188" />

            <TextView
                android:id="@+id/tv_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/color_FFD83B"
                android:textSize="@dimen/text_size_12"
                tools:text="X 12" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_two"
        android:layout_marginStart="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_80"
        android:background="@drawable/selector_login_button_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:text="若无人参与,金币将在30分钟内退还"
        android:textColor="#b3ffffff"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>













