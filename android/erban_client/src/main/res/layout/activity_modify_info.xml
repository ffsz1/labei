<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_first_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <com.hncxco.library_ui.widget.AppToolBar
            android:id="@+id/toolbar"
            style="@style/AppToolBar_white_style"
            app:hasLine="true"
            app:hasRightTitle="true"
            app:rightTitle="保存"
            app:rightTitleColor="@color/color_6E42D2"
            app:rightTitleSize="@dimen/text_size_16"
            app:title="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:gravity="left"
                android:maxLength="200"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"/>

            <EditText
                android:id="@+id/et_content_nick"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="left"
                android:maxLines="2"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="15dp"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_divider_color"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>