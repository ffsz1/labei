<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/bg_common_touch_while">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            app:riv_corner_radius="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/imageView"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

                <com.vslk.lbgx.ui.widget.LevelView
                    android:id="@+id/level_view_new_user_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_new_user_item_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_new_user_item_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_11"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:background="#f5f5f5"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <com.hncxco.library_ui.widget.DrawableTextView
                android:id="@+id/bu_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_18"
                android:paddingTop="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_4"
                android:text="邀请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13"
                app:d_radius="@dimen/dp_15"
                app:drawableType="shape"
                app:soildColor="@color/mm_theme"/>

            <ImageView
                android:id="@+id/iv_share_fans_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_share_unselect"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>

