<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg_top"
        android:layout_width="263dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/img_popup_top_bg"
        android:visibility="gone">

    </RelativeLayout>

    <!--    shape_ffffff_corner_15dp-->


    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="235dp"
        android:layout_below="@id/rl_bg_top"
        android:background="@mipmap/img_popup_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25">

            <ImageView
                android:id="@+id/iv_super_rich_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginTop="2dp"
                android:src="@mipmap/iv_rich_avatar_default" />

            <ImageView
                android:id="@+id/iv_rich_bg"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/img_popup_rich_btn" />


            <TextView
                android:id="@+id/tv_day_rich"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_gravity="center|bottom"
                android:background="@mipmap/img_popup_rich_tv_bg"
                android:gravity="center"
                android:text="今日神豪"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="虚位以待"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="5dp"
                android:background="@mipmap/icon_popup_rich_careful" />

            <TextView
                android:id="@+id/tv_day_golds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:text="今日累计消费1000金币，且最高消费者"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_golds"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可获得 "
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 神豪称号"
                android:textColor="#60A6FF"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>