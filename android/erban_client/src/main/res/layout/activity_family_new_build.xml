<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:title=""/>

    <com.vslk.lbgx.ui.widget.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="156dp">

                <ImageView
                    android:id="@+id/avatar_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_95"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_family_avatar_bg"/>

                <ImageView
                    android:id="@+id/family_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_17"
                    android:src="@drawable/ic_family_build_bg_pic"/>

                <FrameLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_default_avatar"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/ic_family_build_avatar_pic"/>

                </FrameLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_37"
                android:text="家族名称"
                android:textColor="@color/color_8D8A8A"
                android:textSize="@dimen/text_size_15"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_12">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入你家族名字~"
                    android:maxLength="8"
                    android:padding="@dimen/dp_8"
                    android:textColorHint="#FFD4D1D6"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:id="@+id/name_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:text="0/8"
                    android:textColor="@color/color_8D8A8A"
                    android:textSize="@dimen/text_size_12"/>

                <View
                    style="@style/divid_line_style"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginEnd="@dimen/dp_19"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_50"
                android:text="家族公告"
                android:textColor="@color/color_8D8A8A"
                android:textSize="@dimen/text_size_15"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_12">

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_36"
                    android:background="@null"
                    android:hint="请输入你的家族公告~"
                    android:maxLength="50"
                    android:padding="@dimen/dp_8"
                    android:textColorHint="#FFD4D1D6"
                    android:textSize="@dimen/text_size_18"
                    tools:text="请输入你的家族公告请请输入你的家族公告请请输入你的家族公告请请输入你的家族公告请请输入你的家族公告请"/>

                <TextView
                    android:id="@+id/desc_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="0/50"
                    android:textColor="@color/color_8D8A8A"
                    android:textSize="@dimen/text_size_12"/>

                <View
                    style="@style/divid_line_style"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_11"
                    android:layout_marginEnd="@dimen/dp_19"/>

            </FrameLayout>

            <Button
                android:id="@+id/buildFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="@dimen/dp_32"
                android:background="@drawable/icon_default_button_selector"
                android:gravity="center"
                android:text="创建家族"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:button="@drawable/ic_default_checkbox"/>

                <TextView
                    android:id="@+id/protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_10"
                    android:text="同意创建家族条款"
                    android:textColor="#FFB3A7BF"
                    android:textSize="@dimen/text_size_12"/>

            </LinearLayout>

        </LinearLayout>

    </com.vslk.lbgx.ui.widget.ObservableScrollView>

</LinearLayout>