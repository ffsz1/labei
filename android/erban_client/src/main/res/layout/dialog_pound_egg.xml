<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/lottery_bg">


        <ImageView
            android:id="@+id/iv_pound_egg_closs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_16"
            android:contentDescription="@null"
            android:src="@mipmap/lottery_close_btn" />


        <LinearLayout
            android:id="@+id/left_btn_llt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_43"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_lottery_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lottery_paihang_btn" />


            <TextView
                android:id="@+id/iv_lottery_prize_pool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@mipmap/lottery_gift_btn" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35.5dp"
            android:layout_marginTop="@dimen/dp_150"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/iv_lottery_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lottery_guize_btn" />


            <TextView
                android:id="@+id/iv_lottery_win_prize_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@mipmap/lottery_jilu_btn"/>
        </LinearLayout>


        <!--<ImageView
            android:id="@+id/iv_lottery_box_box"
            android:layout_width="121dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/fy_room_egg_0" />-->


        <LinearLayout
            android:id="@+id/ll_lottery_button"
            android:layout_below="@+id/left_btn_llt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15">


            <Button
                android:id="@+id/bu_lottery_box_one"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lottery_x1_btn"/>

            <Button
                android:id="@+id/bu_lottery_box_ten"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@mipmap/lottery_x10_btn" />


            <Button
                android:id="@+id/bu_lottery_box_fifty"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/lottery_x50_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_lottery_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hailuo" />

            <TextView
                android:id="@+id/tv_gold_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_lottery_box_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="获取>"
                android:textColor="@color/color_FDDB00"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
