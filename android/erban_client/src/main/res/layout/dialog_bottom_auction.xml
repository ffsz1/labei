<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_auction"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_auction_height"
    android:background="@color/white"
    android:padding="@dimen/common_item_view_margin_left_right">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="本轮竞拍设置"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/font_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.vslk.lbgx.ui.common.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_default_avatar"
            app:cborder_color="@color/appColor"
            app:cborder_width="1px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_larger" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="起拍价: "
                android:textColor="@color/text_primary"
                android:textSize="@dimen/font_larger" />


            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_minus" />

            <TextView
                android:id="@+id/tv_price_num"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_semi_round_white_solid_black_stroke"
                android:drawableRight="@drawable/icon_gold"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="0"
                android:textColor="@color/text_primary"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_plus_up" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_begin_auction"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_semi_round_yellow_solid"
            android:text="开始竞拍"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_larger" />

    </LinearLayout>

</RelativeLayout>
