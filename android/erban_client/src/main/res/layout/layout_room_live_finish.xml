<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/avatar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_avatar_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:text="TA已经下线"
        android:textColor="@color/color_ffff2079"
        android:textSize="@dimen/text_size_32"/>

    <TextView
        android:id="@+id/tv_room_offline_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_avatar_offline"
        android:layout_centerHorizontal="true"
        android:text="谁是你的小萌萌？快去找找吧！"
        android:textColor="#88ffffff"
        android:textSize="13dp"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_room_offline_notice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="@dimen/dp_15"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:maxLength="11"
                android:text="xx"
                android:textColor="#1A1A1A"
                android:textSize="@dimen/text_size_18"/>

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:src="@mipmap/ic_room_female"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_room_back_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:text="返回主页 发现更多海角星球主播！！"
        android:textColor="#808080"
        android:textSize="@dimen/text_size_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_room_back_desc"
        android:layout_marginBottom="@dimen/dp_55"
        android:gravity="center_horizontal">

        <com.hncxco.library_ui.widget.DrawableTextView
            android:id="@+id/home_page_btn"
            android:layout_width="140dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:minWidth="130dp"
            android:text="主页"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            app:d_radius="@dimen/dp_20"
            app:drawableType="shape"
            app:soildColor="@color/color_ffff0066"/>

        <com.hncxco.library_ui.widget.DrawableTextView
            android:id="@+id/back_btn"
            android:layout_width="140dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/color_ffff5fab"
            android:textSize="@dimen/text_size_16"
            app:d_radius="@dimen/dp_20"
            app:drawableType="shape"
            app:strikeColor="@color/color_ffff2079"
            app:strikeWidth="@dimen/dp_half"/>

    </LinearLayout>
</RelativeLayout>