<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rl_room_top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- android:background="@drawable/bg_room_top_bar"-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_2600000_30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_arrow_left_white"
                    android:visibility="invisible" />

                <View
                    android:layout_width="59dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_room_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_room_lock" />

                        <com.vslk.lbgx.ui.widget.MarqueeTextView
                            android:id="@+id/room_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxWidth="@dimen/dp_80"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_13"
                            tools:text="房间标题房间" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/room_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_9"
                            tools:text="ID: 123456" />

                        <TextView
                            android:id="@+id/tv_micro_charm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:drawableStart="@mipmap/ic_room_charm_heart"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_10"
                            android:visibility="gone"
                            tools:text="9999"
                            tools:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/bg_room_owner_attention_select"
                    android:visibility="invisible" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/dp_10"
                android:contentDescription="@null"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_room_share"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:contentDescription="@null"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_new_room_more"
                android:visibility="invisible" />
        </LinearLayout>

        <com.vslk.lbgx.room.avroom.widget.MicroView
            android:id="@+id/micro_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_online_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_charm"
                android:drawableStart="@mipmap/online_num_icon"
                android:drawableEnd="@drawable/ic_room_online_num_right_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_9"
                android:maxEms="8"
                android:ellipsize="end"
                tools:text="3456" />

            <ImageView
                android:id="@+id/tv_room_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wanfa_gray_btn"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_room_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-6dp"
                android:background="@mipmap/ic_room_rank_list" />

                <ImageView
                    android:id="@+id/fl_no1_money"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@mipmap/ask_lv" />

            </FrameLayout>

            <!--<FrameLayout
                android:id="@+id/fl_no1_money"
                android:layout_width="@dimen/dp_95"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@mipmap/bg_no1_money" />

                <ImageView
                    android:id="@+id/iv_no1_money"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/transparent" />
            </FrameLayout>-->
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_gift_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:background="@mipmap/ic_room_gift_record"
        android:visibility="gone"/>


    <!--海螺记录-->
    <FrameLayout
        android:id="@+id/fl_sea_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="230dp"
        android:background="@mipmap/ic_room_call_record"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_view"
        android:layout_below="@+id/top_view"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <com.vslk.lbgx.room.avroom.widget.MessageView
        android:id="@+id/message_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/room_message_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/room_all_message_select"/>

    </LinearLayout>

    <com.vslk.lbgx.room.avroom.widget.BottomView
        android:id="@+id/bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:id="@+id/play_together"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/bottom_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/icon_play_together"
        android:visibility="gone"
        tools:contentDescription="房主摇骰子按钮"
        tools:visibility="visible" />


    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="在此输入你要说的话!"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#888889"
            android:textColorHint="#c8c8c8"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/input_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/click_white_gray_selector"
            android:scaleType="center"
            android:src="@drawable/ic_menu_send" />
    </LinearLayout>

    <Button
        android:id="@+id/bu_mic_in_list_count"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@id/bottom_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_19"
        android:background="@drawable/mic_in_list_count_bg"
        android:textColor="@color/white"
        android:visibility="gone" />

    <!--todo xxx来了，暂时不动-->
    <LinearLayout
        android:id="@+id/layout_come_msg"
        android:layout_width="@dimen/layout_come_msg_width"
        android:layout_height="23dp"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        tools:background="@drawable/bg_come_msg_tip_lv10_19">

        <com.vslk.lbgx.ui.widget.LevelView
            android:id="@+id/level_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@drawable/lv1" />

        <TextView
            android:id="@+id/tv_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_come_msg_name"
            android:textSize="12sp"
            tools:text="XXX" />

        <TextView
            android:id="@+id/tv_msg_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="驾着“座驾名称”来了" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_finger_guessing_game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_22"
        android:layout_marginBottom="260dp"

        android:src="@drawable/ic_finger_guessing_game"
        android:visibility="gone"
        tools:visibility="visible" />

    <!--<com.vslk.xxm.room.match.RoomMatchView
        android:id="@+id/rmv_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="145dp"
        android:visibility="gone"
        tools:visibility="visible" />-->

    <com.vslk.lbgx.ui.widget.Banner
        android:id="@+id/activity_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_above="@id/bottom_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/dp_120"

        tools:contentDescription="红包活动" />

    <ImageView
        android:id="@+id/icon_room_lottery_box"
        android:layout_width="64dp"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/dp_60"
        android:src="@mipmap/lottery_baoxiang_ruko"
        android:visibility="gone"
        tools:visibility="visible" />

    <ViewStub
        android:id="@+id/vs_music_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/avroom_music_player_layout" />


    <ImageView
        android:id="@+id/iv_go_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="7dp"
        android:src="@mipmap/ic_arrow_left_white" />

    <View
        android:id="@+id/user_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="200dp" />

    <ImageView
        android:id="@+id/tv_room_master_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/iv_room_share"
        android:padding="8dp"
        android:src="@mipmap/bg_room_owner_attention_select"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10" />


    <ImageView
        android:id="@+id/iv_room_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:contentDescription="@null"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_new_room_more" />

    <ImageView
        android:id="@+id/iv_room_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toStartOf="@id/iv_room_operate"
        android:contentDescription="@null"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_room_share" />

</RelativeLayout>