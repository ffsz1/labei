<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:title="绑定手机号码" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="手机号码"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:background="@null"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/text_color_primary"
        android:textColorHint="@color/text_color_secondary"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:background="@color/line_color" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="验证码"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_20">

        <EditText
            android:id="@+id/et_smscode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="number"
            android:maxLength="5"
            android:paddingLeft="32dp"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_secondary"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <com.hncxco.library_ui.widget.DrawableTextView
            android:id="@+id/btn_get_code"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_marginEnd="@dimen/dp_32"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            app:d_radius="@dimen/dp_15"
            app:drawableType="shape"
            app:soildColor="#7A9DFF" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_32"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/btn_binder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_gray_radius_22dp"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/btn_binder_request"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_login_selected"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />


</LinearLayout>
