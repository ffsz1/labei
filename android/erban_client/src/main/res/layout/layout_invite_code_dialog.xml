<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_190"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.DrawableTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:d_radius="@dimen/dp_20"
        app:drawableType="shape"
        app:soildColor="@color/white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="填写邀请码"
            android:textColor="@color/title_212121"
            android:textSize="@dimen/text_size_17"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@null"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_invite_close_dialog"/>

    </FrameLayout>

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@drawable/shape_invite_friend_code_dialog"
        android:gravity="center"
        android:hint="请输入邀请码"
        android:inputType="number"
        android:maxLength="7"
        android:textColor="@color/title_212121"
        android:textColorHint="@color/title_212121"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/shape_gradient_invite_friend"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>

</FrameLayout>
