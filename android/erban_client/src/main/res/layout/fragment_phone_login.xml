<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_login_item">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="#C8C7CC"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2" />

            <LinearLayout
                android:id="@+id/lly_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="@color/back_font"
                    android:textSize="24sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="25dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="#859AFF"
                    app:cardCornerRadius="5dp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_top"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="45dp"
            android:background="#EFEFF4" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_top"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_45"
            android:background="@drawable/shape_fafafa_20dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C2C2C2"
            android:textSize="@dimen/text_size_12" />

        <FrameLayout
            android:id="@+id/fl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_45">

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fafafa_20dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingStart="@dimen/dp_30"
                android:paddingTop="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_C2C2C2"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/iv_is_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@mipmap/ic_password_nor" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_one"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_45"
            android:background="@drawable/selector_login_button_bg"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_register_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:layout_marginStart="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:text="立即注册"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_forget_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_55"
            android:padding="@dimen/dp_10"
            android:text="忘记密码?"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_register_new"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wechat_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/ic_login_weixin" />

            <TextView
                android:id="@+id/tv_qq_login"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/ic_login_qq" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_check_box_login"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="登录注册即表示同意海角星球"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2">

            <TextView
                android:id="@+id/tv_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_self_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_live_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《直播协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="暂不接受未成年用户注册，请确认您已满18岁"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>
</RelativeLayout>