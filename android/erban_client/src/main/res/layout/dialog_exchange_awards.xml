<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="277dp"
    android:background="@drawable/shape_exchange_awards_dialog_bg"

    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <ImageView
            android:id="@+id/iv_awards"
            android:layout_width="wrap_content"
            android:layout_height="120dp"

            android:src="@drawable/dh_nothing" />

        <ImageView
            android:id="@+id/iv_awards_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/dh_close" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_awards_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="恭喜你"
            android:textColor="@color/text_1A1A1A"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_awards_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="很遗憾，没有爆中"
            android:textColor="@color/text_1A1A1A"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/bu_awards_ok"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_car_pay"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>