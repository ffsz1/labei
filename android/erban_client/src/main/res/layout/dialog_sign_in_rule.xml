<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sign_in_rule"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:text="点点币规则"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/dot_ff80b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点点币只可以通过签到及任务形式获得，后续会开放更多获得途径"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/dot_ff80b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点点币可用与活动、房间礼物赠送等"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/dot_ff80b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目前点点币处理体验阶段，后续趣味玩法，敬请期待"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/dot_ff80b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点点币为免费币种，获取方式仅以上途径，点点币仅供以上趣味玩法体验使用不做其他用途"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/dot_ff80b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本活动与Apple INC. 无关"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>
</LinearLayout>