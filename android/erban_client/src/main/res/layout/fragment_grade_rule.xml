<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/grade_bg_llt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_user_charm_grade_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:background="@drawable/ic_user_charm_grade_bg">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_25"
                android:contentDescription="@null"
                android:src="@drawable/ic_default_avatar"
                app:riv_border_color="@color/white"
                app:riv_border_width="@dimen/dp_2"
                app:riv_oval="true"/>

            <com.vslk.lbgx.ui.widget.LevelView
                android:id="@+id/level_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_21"
                    android:layout_marginEnd="@dimen/dp_21"
                    android:maxHeight="@dimen/dp_3"
                    android:progress="0"
                    android:progressDrawable="@drawable/grade_gold_seek_bar_shape"
                    android:splitTrack="false"
                    android:thumb="@null"/>

                <com.hncxco.library_ui.widget.DrawableTextView
                    android:id="@+id/startGrade"
                    android:layout_width="38dp"
                    android:layout_height="@dimen/dp_15"
                    android:gravity="center"
                    android:textColor="@color/color_ffff9eba"
                    android:textSize="@dimen/text_size_10"
                    app:d_radius="@dimen/dp_8"
                    app:drawableType="shape"
                    app:soildColor="@color/white"
                    tools:text="Lv.10"/>

                <com.hncxco.library_ui.widget.DrawableTextView
                    android:id="@+id/endGrade"
                    android:layout_width="38dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    app:d_radius="@dimen/dp_8"
                    app:drawableType="shape"
                    app:soildColor="@color/color_ffff9eba"
                    tools:text="Lv.20"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notify_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="距离升级还差50经验值，"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:id="@+id/explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级说明"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-140dp"
            android:background="@drawable/ic_user_ranking_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_33"
                android:layout_marginTop="@dimen/dp_35"
                android:drawablePadding="@dimen/dp_8"
                android:text="如何升级"
                android:textColor="@color/color_ff2d3a47"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/lv_ranking_gift"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_17"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gave_gift_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff2d3a47"
                        android:textSize="@dimen/text_size_13"
                        tools:text="@string/charm_info"/>

                    <TextView
                        android:id="@+id/gold_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textSize="@dimen/text_size_12"
                        tools:text="@string/gold_tips"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>