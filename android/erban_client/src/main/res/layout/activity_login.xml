<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLogin"
            type="Boolean" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@drawable/ic_login_title_bg"
                    android:contentDescription="@null" />

                <!--登录时显示-->
                <LinearLayout
                    android:id="@+id/login_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="@{isLogin ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/arrow_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:onClick="@{onClick}"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_10"
                        android:src="@drawable/icon_nav_back" />

                    <TextView
                        android:id="@+id/temp_entrance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:onClick="@{onClick}"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_32"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:background="@drawable/ic_login_input_shadow"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_60"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@drawable/login_input_up_bg"
                            android:drawablePadding="@dimen/dp_9"
                            android:gravity="bottom"
                            android:hint="请输入手机号"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:paddingStart="@dimen/dp_32"
                            android:paddingBottom="@dimen/dp_20"
                            android:textColor="@color/color_484747"
                            android:textColorHint="@color/color_999999"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_size_15" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@color/white"
                            android:paddingStart="@dimen/dp_20">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_half"
                                android:layout_marginStart="@dimen/dp_12"
                                android:layout_marginEnd="@dimen/dp_32"
                                android:background="@color/light" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_60"
                                android:layout_weight="1"
                                android:background="@null"
                                android:drawablePadding="@dimen/dp_9"
                                android:gravity="center_vertical"
                                android:hint="请输入密码"
                                android:inputType="textPassword"
                                android:maxLength="12"
                                android:paddingStart="@dimen/dp_32"
                                android:paddingEnd="@dimen/dp_15"
                                android:textColor="@color/text_color_primary"
                                android:textColorHint="@color/color_999999"
                                android:textCursorDrawable="@null"
                                android:textSize="15sp" />

                            <com.hncxco.library_ui.widget.DrawableTextView
                                android:id="@+id/btn_forget"
                                android:layout_width="@dimen/dp_76"
                                android:layout_height="@dimen/dp_29"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_32"
                                android:gravity="center"
                                android:onClick="@{onClick}"
                                android:text="忘记密码"
                                android:textColor="@color/color_ffff0066"
                                android:textSize="@dimen/text_size_13"
                                app:d_radius="@dimen/dp_15"
                                app:drawableType="shape"
                                app:soildColor="@color/color_ffffe5ef" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@color/white"
                            android:paddingStart="@dimen/dp_20">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_half"
                                android:layout_marginStart="@dimen/dp_12"
                                android:layout_marginEnd="@dimen/dp_120"
                                android:background="@color/light" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@drawable/login_input_down_bg">

                            <com.hncxco.library_ui.widget.DrawableTextView
                                android:id="@+id/btn_login"
                                style="@style/TextButtonGradientStyle_RED"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginStart="@dimen/dp_32"
                                android:layout_marginTop="28dp"
                                android:layout_marginEnd="32dp"
                                android:onClick="@{onClick}"
                                android:text="登录" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--未登录时显示-->
                <LinearLayout
                    android:id="@+id/no_login_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/dp_60"
                    android:orientation="vertical"
                    android:visibility="@{isLogin ? View.GONE : View.VISIBLE}"
                    tools:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@drawable/ic_login_input_shadow"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@drawable/login_input_up_bg"
                            android:paddingBottom="@dimen/dp_15">

                            <com.hncxco.library_ui.widget.DrawableTextView
                                android:id="@+id/startRegister"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginStart="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_45"
                                android:layout_marginEnd="@dimen/dp_32"
                                android:gravity="center"
                                android:onClick="@{onClick}"
                                android:text="注册"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/text_size_17"
                                app:centerColor="@color/color_ff842dfe"
                                app:d_radius="@dimen/dp_22"
                                app:drawableType="shape"
                                app:endColor="@color/color_ff8e3dff"
                                app:startColor="@color/mm_theme" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@drawable/login_input_down_bg"
                            android:paddingTop="@dimen/dp_15">

                            <com.hncxco.library_ui.widget.DrawableTextView
                                android:id="@+id/startLogin"
                                style="@style/TextButtonGradientStyle_RED"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginStart="@dimen/dp_32"
                                android:layout_marginEnd="@dimen/dp_32"
                                android:layout_marginBottom="@dimen/dp_45"
                                android:onClick="@{onClick}"
                                android:text="登录" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="快速登录"
                    android:textColor="#FF939393"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:id="@+id/layout_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/img_wx_loging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_wechat_login"
                        android:drawablePadding="-8dp"
                        android:gravity="center_horizontal"
                        android:onClick="@{onClick}"
                        android:text="微信"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/img_qq_loging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_36"
                        android:drawableTop="@drawable/ic_qq_login"
                        android:drawablePadding="-8dp"
                        android:gravity="center_horizontal"
                        android:onClick="@{onClick}"
                        android:text="QQ"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layou_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录即表示同意"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{onClick}"
                        android:padding="@dimen/dp_5"
                        android:text="《用户协议》"
                        android:textColor="@color/color_ffff0066"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="和"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{onClick}"
                        android:padding="@dimen/dp_5"
                        android:text="《隐私协议》"
                        android:textColor="@color/color_ffff0066"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
