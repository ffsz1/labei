<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:hasLine="true"
        app:title="@string/gift_send_text"/>

    <com.vslk.lbgx.ui.widget.magicindicator.MagicIndicator
        android:id="@+id/give_goods_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_give_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>