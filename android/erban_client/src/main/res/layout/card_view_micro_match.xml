<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginLeft="@dimen/dp_35"
    android:layout_marginRight="@dimen/dp_35"
    android:layout_marginBottom="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_18"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tongdaxing.erban.libcommon.tinderstack.DynamicHeightImageView
            android:id="@+id/div_matchAva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="280dp"
            android:scaleType="centerCrop"
            app:heightRatio="0.75" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_matchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:text="世界我最甜"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_17" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_man" />

                    <com.vslk.lbgx.ui.widget.LevelView
                        android:id="@+id/level_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_user_name"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:visibility="visible" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/tv_age"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="@dimen/dp_6"-->
                    <!--                        android:textColor="@color/color_b2b2b2"-->
                    <!--                        android:textSize="@dimen/text_size_14"-->
                    <!--                        tools:text="23" />-->

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/tv_const"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="@dimen/dp_10"-->
                    <!--                        android:textColor="@color/color_b2b2b2"-->
                    <!--                        android:textSize="@dimen/text_size_15"-->
                    <!--                        tools:text="双鱼座" />-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_home_xin" />

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_14"
                    android:singleLine="true"
                    android:textColor="@color/text_color_primary" />

                <FrameLayout
                    android:layout_width="73dp"
                    android:layout_height="29dp">

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:id="@+id/attention"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/bg_pipei_zhuye_btn"
                        android:gravity="center"
                        android:text="主页"
                        android:textColor="#DB7EFF"
                        android:textSize="@dimen/text_size_14" />

                    <!--                    <com.hncxco.library_ui.widget.DrawableTextView-->
                    <!--                        android:id="@+id/attentioned"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:text="已关注"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/text_size_13"-->
                    <!--                        android:visibility="invisible"-->
                    <!--                        app:d_radius="@dimen/dp_15"-->
                    <!--                        app:drawableType="shape"-->
                    <!--                        app:soildColor="@color/color_ffff9eba" />-->

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_recordPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/gradient_shape"
                android:gravity="center"
                android:minWidth="125dp"
                android:minHeight="23dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_recordPlayer"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_user_info_play" />

                <FrameLayout
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8">

                    <com.opensource.svgaplayer.SVGAImageView
                        android:id="@+id/svgaiv_recordAnim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_micro_match_record_default"
                        android:visibility="visible"
                        app:antiAlias="true"
                        app:autoPlay="false" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:text="2:00"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
