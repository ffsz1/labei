<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLike"
            type="Boolean" />

        <variable
            name="isUserSelf"
            type="Boolean" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="userInfo"
            type="com.tongdaxing.xchat_core.user.bean.UserInfo" />

        <variable
            name="showBanner"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFAFAFA">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:visibility="gone">

            <com.vslk.lbgx.ui.widget.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{showBanner ? View.VISIBLE : View.GONE}" />

            <ImageView
                android:id="@+id/userBigAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_37353B"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_info_default_bg"
                android:visibility="@{showBanner ? View.GONE : View.VISIBLE}" />

        </FrameLayout>

        <com.vslk.lbgx.ui.widget.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="@dimen/dp_30"
            android:fillViewport="true"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="318dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_me_top_bg" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/photo_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="318dp"
                        android:layout_below="@id/gift_number"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginTop="248dp"
                        android:background="@mipmap/ic_user_info_bg"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.vslk.lbgx.ui.widget.MarqueeTextView
                                    android:id="@+id/tv_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/icon_woman"
                                    android:drawablePadding="@dimen/dp_2"
                                    android:ellipsize="marquee"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:singleLine="true"
                                    android:text="@{userInfo.nick}"
                                    android:textColor="#FF333333"
                                    android:textSize="@dimen/text_size_20"
                                    android:textStyle="bold"
                                    tools:text="登录上月球表面" />

                                <com.vslk.lbgx.ui.widget.LevelView
                                    android:id="@+id/level_view_user_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:gravity="center_vertical"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:id="@+id/me_tabs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_user_attentions"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:onClick="@{click}"
                                        android:text="@{String.valueOf(userInfo.followNum)}"
                                        android:textColor="@color/back_font"
                                        android:textSize="@dimen/sp_14"
                                        tools:text="152" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="@string/my_attention"
                                        android:textColor="#CCCCCC"
                                        android:textSize="11sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"
                                    android:background="#CCCCCC" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_user_fans"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:onClick="@{click}"
                                        android:text="@{String.valueOf(userInfo.fansNum)}"
                                        android:textColor="@color/back_font"
                                        android:textSize="@dimen/sp_14"
                                        tools:text="88" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:text="@string/my_fan"
                                        android:textColor="#CCCCCC"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_erban_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{@string/me_user_id_null + userInfo.erbanNo}"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_12"
                                tools:text="ID:1024" />

                            <TextView
                                android:id="@+id/clipboard"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_user_info_copy"
                                android:contentDescription="@null"
                                android:gravity="center"
                                android:text="复制"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/user_where"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@mipmap/bg_home_online_number"
                                android:gravity="center"
                                android:onClick="@{click}"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:visibility="@{isUserSelf ? View.GONE : View.VISIBLE}"
                                tools:text="找Ta" />

                            <TextView
                                android:id="@+id/user_room_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:background="@mipmap/bg_home_online_number"
                                android:gravity="center"
                                android:onClick="@{click}"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:visibility="@{isUserSelf ? View.GONE : View.VISIBLE}"
                                tools:text="房间" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ta的声音："
                                android:textColor="@color/back_font"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:id="@+id/fl_play_audio"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_27"
                                android:background="@drawable/bg_home_voice"
                                android:onClick="@{click}">

                                <ImageView
                                    android:id="@+id/iv_audio_fi"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:background="@drawable/icon_me_userinfo_audio" />

                                <TextView
                                    android:id="@+id/duration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:text="@{userInfo.voiceDura + `s`}"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="99s" />

                                <ImageView
                                    android:id="@+id/play_anim"
                                    android:layout_width="@dimen/dp_35"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:layout_toStartOf="@id/duration"
                                    android:layout_toEndOf="@id/iv_audio_fi"
                                    android:contentDescription="@null"
                                    android:src="@drawable/icon_micro_match_record_default" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_me_user_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="@dimen/dp_40"
                            android:layout_marginBottom="30dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/ic_home_xin" />

                            <com.vslk.lbgx.ui.widget.ExpandableTextView
                                android:id="@+id/expand_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/user_info_desc_empty" />

                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="214dp"
                        app:cardCornerRadius="36dp"
                        app:cardElevation="0dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:onClick="@{click}"
                            android:scaleType="centerCrop"
                            app:riv_oval="true" />

                        <ImageView
                            android:id="@+id/headwear"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:onClick="@{click}"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center" />
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="这家伙很懒，还没有上传相片哦！"
                    android:visibility="gone" />


                <RadioGroup
                    android:id="@+id/rg_gift_car_tab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <com.vslk.lbgx.ui.widget.MyRadioButton
                        android:id="@+id/rb_tab_my_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="收到的礼物"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:drawableBottom="@drawable/user_info_tab_radiobutton_background"
                        app:drawableSize="@dimen/dp_32"
                        app:top_to_bottom="@dimen/dp_3" />

                    <TextView
                        android:id="@+id/gift_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.vslk.lbgx.ui.widget.MyRadioButton
                        android:id="@+id/rb_tab_my_head_dress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:button="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="头饰"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_14"
                        app:drawableBottom="@drawable/user_info_tab_radiobutton_background"
                        app:drawableSize="@dimen/dp_32"
                        app:top_to_bottom="@dimen/dp_3" />

                    <com.vslk.lbgx.ui.widget.MyRadioButton
                        android:id="@+id/rb_tab_my_car"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="座驾"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_14"
                        app:drawableBottom="@drawable/user_info_tab_radiobutton_background"
                        app:drawableSize="@dimen/dp_32"
                        app:top_to_bottom="@dimen/dp_3" />
                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rg_gift_car_tab"
                    android:background="@drawable/shape_ffffff_corner_15dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/gift_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_100" />

                    <LinearLayout
                        android:id="@+id/ll_user_gift_empty"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginBottom="@dimen/dp_100"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/content_empty" />

                        <TextView
                            android:id="@+id/gift_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_horizontal"
                            android:text="暂没有收到礼物"
                            android:textColor="@color/text_color_secondary" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </com.vslk.lbgx.ui.widget.ObservableScrollView>


        <RelativeLayout
            android:id="@+id/rl_top_corner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="@dimen/dp_30"
                android:padding="7dp"
                android:src="@mipmap/icon_nav_back" />

            <ImageView
                android:id="@+id/tv_defriend"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="7dp"
                android:onClick="@{click}"
                android:padding="7dp"
                android:src="@mipmap/ic_user_info_defriend"
                android:visibility="@{!isUserSelf? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/tv_zone_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:text="我的空间"
                android:textColor="@color/transparent"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_btn_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_me_userinfo_bg_fond"
            android:orientation="horizontal"
            android:visibility="@{isUserSelf?View.GONE:View.VISIBLE}">

            <LinearLayout
                android:id="@+id/send_msg_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:onClick="@{click}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:drawableStart="@drawable/icon_userinfo_msg"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:text="私聊"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@color/light" />

            <LinearLayout
                android:id="@+id/ll_attention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{click}"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attention_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:contentDescription="@null"
                    android:src="@{isLike ? @drawable/icon_new_attentioned : @drawable/icon_new_attention}"
                    tools:src="@drawable/icon_new_attention" />

                <TextView
                    android:id="@+id/attention_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:text="@{isLike ? @string/main_attentioned : @string/main_attention}"
                    android:textColor="@{isLike ? @color/color_ff999999 : @color/black}"
                    android:textSize="@dimen/sp_16"
                    tools:text="@string/main_attention"
                    tools:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>