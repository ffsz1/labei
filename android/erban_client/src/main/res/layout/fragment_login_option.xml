<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/bg_login_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/shape_c485ff_20dp"
            android:drawableStart="@drawable/ic_login_option_phone"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_36"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_36"
            android:paddingBottom="@dimen/dp_10"
            android:text="手机登录"
            android:textColor="@color/color_C280FF"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_wechat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_e6fff0_20dp"
            android:drawableStart="@drawable/ic_login_option_wechat"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_36"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_36"
            android:paddingBottom="@dimen/dp_10"
            android:text="微信登录"
            android:textColor="@color/color_00CA52"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_e6f8ff_20dp"
            android:drawableStart="@drawable/ic_login_option_qq"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_36"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_36"
            android:paddingBottom="@dimen/dp_10"
            android:text="QQ登录"
            android:textColor="@color/color_57CAF7"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_wechat_login"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_check_box_login"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="登录注册即表示同意海角星球"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_self_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_live_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《直播协议》"
                android:textColor="@color/color_C280FF"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="暂不接受未成年用户注册，请确认您已满18岁"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>
</LinearLayout>