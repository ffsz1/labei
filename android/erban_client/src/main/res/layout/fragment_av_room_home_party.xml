<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/owner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_auction_fragment_avatar"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.vslk.lbgx.ui.common.widget.CircleImageView
                    android:id="@+id/room_owner_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    app:cborder_color="#33FFFFFF"
                    app:cborder_width="2dp" />

                <ImageView
                    android:id="@+id/room_owner_speek"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/room_owner_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/room_owner_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_best_tiny" />
            </LinearLayout>

            <ImageView
                android:id="@+id/attention_view"
                android:layout_width="32.5dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_room_attention"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/room_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/icon_room_more" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_user_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_user_online" />

    <com.vslk.lbgx.room.avroom.widget.UserListView
        android:id="@+id/user_list_view"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/owner_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp" />


    <com.vslk.lbgx.room.avroom.widget.BottomView
        android:id="@+id/bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <com.vslk.lbgx.ui.praise.HiPraiseAnimationView
        android:id="@+id/praise_animation_view"
        android:layout_width="70dp"
        android:layout_height="400dp"
        android:layout_above="@id/bottom_view"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/praise_click_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_view"
        android:layout_below="@+id/iv_user_online"
        android:layout_marginTop="13dp" />

    <com.vslk.lbgx.room.avroom.widget.MessageView
        android:id="@+id/message_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        android:layout_below="@+id/music_player_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="30dp"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/activity_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/bottom_view"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="5dp" />

    <FrameLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="在此输入你要说的话!"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#888889"
                android:textColorHint="#c8c8c8"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/input_send"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/click_white_gray_selector"
                android:scaleType="center"
                android:src="@drawable/ic_menu_send" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/auction_notice"
        android:layout_width="85dp"
        android:layout_height="22dp"
        android:layout_below="@id/iv_user_online"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_room_notice" />

    <ImageView
        android:id="@+id/contribute_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/user_list_view"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_contribute_list" />

    <com.vslk.lbgx.room.audio.widget.MusicPlayerView
        android:id="@+id/music_player_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/auction_notice"
        android:layout_marginTop="10dp" />


    <com.vslk.lbgx.room.avroom.widget.GiftView
        android:id="@+id/gift_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />


</RelativeLayout>