<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <corners android:topRightRadius="20dp" />
            <gradient android:angle="180" android:centerColor="#7F9DFF" android:endColor="#7F9DFF" android:startColor="#DC83FF" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <corners android:topRightRadius="20dp" />
            <gradient android:angle="180" android:endColor="#483084" android:startColor="#483084" />
        </shape>
    </item>
</selector>