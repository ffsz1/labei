<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.erban.main.mybatismapper.FansMapperExpand">
    <resultMap id="BaseResultMap" type="com.erban.main.model.Fans">
        <id column="fan_id" property="fanId" jdbcType="BIGINT"/>
        <result column="like_uid" property="likeUid" jdbcType="BIGINT"/>
        <result column="liked_uid" property="likedUid" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getFollowingListByUidPage" resultMap="BaseResultMap">
        select * from fans where like_uid = #{0} limit #{1},#{2}
    </select>

    <select id="getFansListByUidPage" resultMap="BaseResultMap">
        select * from fans where liked_uid = #{0} limit #{1},#{2}
    </select>

    <select id="getFollowingCount" resultType="int">
        select count(fan_id) from fans where like_uid = #{0}
    </select>

    <select id="getFansCount" resultType="int">
        select count(fan_id) from fans where liked_uid = #{0}
    </select>
</mapper>
