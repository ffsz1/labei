<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.erban.main.mybatismapper.UserDrawMapperMgr" >
  <resultMap id="BaseResultMap" type="com.erban.main.model.UserDrawRecord" >
    <id column="record_id" property="recordId" jdbcType="INTEGER" />
    <result column="uid" property="uid" jdbcType="BIGINT" />
    <result column="draw_status" property="drawStatus" jdbcType="TINYINT" />
    <result column="type" property="type" jdbcType="TINYINT" />
    <result column="src_obj_id" property="srcObjId" jdbcType="VARCHAR" />
    <result column="src_obj_name" property="srcObjName" jdbcType="VARCHAR" />
    <result column="draw_prize_id" property="drawPrizeId" jdbcType="INTEGER" />
    <result column="draw_prize_name" property="drawPrizeName" jdbcType="VARCHAR" />
    <result column="draw_prize_putout" property="drawPrizePutout" jdbcType="TINYINT" />
    <result column="record_desc" property="recordDesc" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <select id="getUserDrawRecordListByStatus" resultMap="BaseResultMap" >
    SELECT
    record_id, uid, draw_status, type, src_obj_id, src_obj_name, src_obj_amount, draw_prize_id,
    draw_prize_name, draw_prize_putout, record_desc, create_time, update_time
    FROM
      user_draw_record
    WHERE draw_status = 3
    ORDER BY draw_prize_id DESC, create_time DESC
    LIMIT 0, 20
  </select>

</mapper>
