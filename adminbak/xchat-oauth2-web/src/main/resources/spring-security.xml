<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:oauth2="http://music.yy.com/schema/security/oauth2"
             xmlns:mvc="http://www.springframework.org/schema/mvc"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/security
                        http://www.springframework.org/schema/security/spring-security-3.2.xsd
                        http://music.yy.com/schema/security/oauth2
                        http://music.yy.com/schema/security/spring-security-oauth2-1.0.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">


    <mvc:annotation-driven/>
    <mvc:default-servlet-handler/>

    <http pattern="/oauth/token" create-session="stateless" authentication-manager-ref="oauth2AuthenticationManager"
          entry-point-ref="oauth2AuthenticationEntryPoint">
        <intercept-url pattern="/oauth/token" access="IS_AUTHENTICATED_FULLY"/>
        <anonymous enabled="false"/>
        <http-basic entry-point-ref="oauth2AuthenticationEntryPoint"/>
        <custom-filter ref="clientCredentialsTokenEndpointFilter" before="BASIC_AUTH_FILTER"/>
        <access-denied-handler ref="oauth2AccessDeniedHandler"/>
    </http>

    <beans:bean id="clientDetailsService" class="com.xchat.oauth2.service.domain.oauth.CustomJdbcClientDetailsService">
        <beans:constructor-arg index="0" ref="dataSource"/>
    </beans:bean>

    <beans:bean id="oauth2ClientDetailsUserService"
                class="com.xchat.oauth2.service.provider.client.ClientDetailsUserDetailsService">
        <beans:constructor-arg ref="clientDetailsService"/>
    </beans:bean>
    <authentication-manager id="oauth2AuthenticationManager">
        <authentication-provider user-service-ref="oauth2ClientDetailsUserService"/>
    </authentication-manager>


    <beans:bean id="tokenDbStore" class="com.xchat.oauth2.service.provider.token.store.JdbcTokenStore">
        <beans:constructor-arg index="0" ref="dataSource"/>
    </beans:bean>
    <beans:bean id="tokenStore" class="com.xchat.oauth2.service.provider.token.store.JwtTokenStore">
        <beans:constructor-arg index="0" ref="jwtAccessTokenConverter"/>
    </beans:bean>
    <beans:bean id="jwtAccessTokenConverter" class="com.xchat.oauth2.service.provider.token.store.JwtAccessTokenConverter">
        <beans:property name="signingKey" value="dh293Hkdjf3G"/>
    </beans:bean>




    <beans:bean id="tokenServices" class="com.xchat.oauth2.service.provider.token.XchatTokenServices">
        <beans:property name="accessTokenValiditySeconds" value="2592000"/>
        <beans:property name="refreshTokenValiditySeconds" value="3196800"/>
        <beans:property name="tokenStore" ref="tokenStore"/>
        <beans:property name="tokenDbStore" ref="tokenDbStore"/>
        <beans:property name="ticketStore" ref="ticketStore"/>
        <beans:property name="supportRefreshToken" value="true"/>
        <beans:property name="tokenEnhancer" ref="jwtAccessTokenConverter"/>
        <beans:property name="reuseRefreshToken" value="false"/>
        <beans:property name="userService" ref="userService"/>
        <beans:property name="jedisService" ref="jedisService"/>

    </beans:bean>

    <beans:bean id="ticketStore" class="com.xchat.oauth2.service.provider.ticket.store.JdbcRedisTicketStore">
        <beans:constructor-arg index="0" ref="dataSource"/>
        <beans:constructor-arg index="1" ref="jedisService"/>
        <beans:constructor-arg index="2" ref="userService"/>
    </beans:bean>

    <beans:bean id="ticketServices" class="com.xchat.oauth2.service.provider.ticket.XchatTicketServices">
        <beans:property name="tokenStore" ref="tokenStore"/>
        <beans:property name="ticketStore" ref="ticketStore"/>
        <beans:property name="ticketValiditySeconds" value="3600"/>
        <beans:property name="ticketEnhancer" ref="ticketEnhancer"/>
        <beans:property name="userService" ref="userService"/>
    </beans:bean>

    <beans:bean id="ticketEnhancer" class="com.xchat.oauth2.service.provider.ticket.store.JwtTicketConverter">
    </beans:bean>


    <beans:bean id="oauth2AuthenticationEntryPoint"
                class="com.xchat.oauth2.service.provider.error.OAuth2AuthenticationEntryPoint"/>

    <beans:bean id="oauth2AccessDeniedHandler"
                class="com.xchat.oauth2.service.provider.error.OAuth2AccessDeniedHandler"/>
    <beans:bean id="oauthUserApprovalHandler"
                class="com.xchat.oauth2.service.provider.approval.DefaultUserApprovalHandler"/>

    <beans:bean id="oauth2AccessDecisionManager" class="org.springframework.security.access.vote.UnanimousBased">
        <beans:constructor-arg>
            <beans:list>
                <beans:bean class="com.xchat.oauth2.service.provider.vote.ScopeVoter"/>
                <beans:bean class="org.springframework.security.access.vote.RoleVoter"/>
                <beans:bean class="org.springframework.security.access.vote.AuthenticatedVoter"/>
            </beans:list>
        </beans:constructor-arg>
    </beans:bean>


    <oauth2:authorization-server client-details-service-ref="clientDetailsService" token-services-ref="tokenServices"
                                 user-approval-handler-ref="oauthUserApprovalHandler">
        <!--<oauth2:authorization-code />-->
        <!--<oauth2:implicit />-->
        <oauth2:refresh-token/>
        <oauth2:client-credentials/>
        <oauth2:password/>
    </oauth2:authorization-server>

    <beans:bean id="clientCredentialsTokenEndpointFilter"
                class="com.xchat.oauth2.service.provider.client.ClientCredentialsTokenEndpointFilter">
        <beans:property name="authenticationManager" ref="oauth2AuthenticationManager"/>
    </beans:bean>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userService">
            <password-encoder hash="md5"/>
        </authentication-provider>
    </authentication-manager>

</beans:beans>
