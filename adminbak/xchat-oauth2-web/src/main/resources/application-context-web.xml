<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd"
       default-lazy-init="true">

    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreResourceNotFound">
            <value>false</value>
        </property>
        <property name="fileEncoding">
            <value>utf-8</value>
        </property>
        <property name="locations">
            <list>
                <value>classpath:/application-oauth2-web.properties</value>
                <value>classpath:/config.properties</value>
            </list>
        </property>
    </bean>

    <!--annotation configuration -->
    <context:annotation-config/>
    <context:component-scan base-package="com.xchat.common,com.xchat.oauth2.service.service,
    com.xchat.oauth2.service.cleaner,com.xchat.oauth2.service.sso,com.xchat.oauth2.web.controller">
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation"/>
    </context:component-scan>
    <bean id="jsonHeaders" class="org.springframework.http.HttpHeaders">
        <property name="contentType" value="application/json; charset=UTF-8"/>
        <property name="accept" value="application/json"/>
    </bean>

    <import resource="classpath*:/application-context-mybatis.xml"/>
    <import resource="classpath*:/application-context-redis.xml"/>
    <import resource="classpath*:/spring-security.xml"/>
    <!--<import resource="classpath*:/spring-transaction.xml"/>-->
    <!--<import resource="classpath*:/application-context-sms.xml"/>-->
    <!--<import resource="classpath*:/application-context-quartz.xml"/>-->
</beans>
    
