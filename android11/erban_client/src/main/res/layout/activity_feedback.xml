<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        style="@style/AppToolBar_white_style"
        app:hasLine="false"
        app:hasRightTitle="true"
        app:rightTitle="提交"
        app:rightTitleColor="@color/color_ff7b7f88"
        app:rightTitleSize="@dimen/text_size_16"
        app:title="我要反馈" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="请详细描述您所遇到的问题与情况,感谢您提出宝贵的意见."
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <EditText
        android:id="@+id/edt_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:hint="请留下您的QQ或微信"
        android:paddingStart="@dimen/dp_15"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_semi_round_yellow_solid"
        android:text="提交"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone" />

</LinearLayout>
