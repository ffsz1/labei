<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fffafafa_corner_15dp"
    android:orientation="vertical">

    <!--<TextView-->
    <!--android:id="@+id/title"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginStart="@dimen/dp_20"-->
    <!--android:layout_marginTop="@dimen/dp_20"-->
    <!--android:text="分享至"-->
    <!--android:textColor="@color/color_666666"-->
    <!--android:textSize="@dimen/text_size_14" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#f5f5f5"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_share_red"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/icon_share_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_share_red"
            android:text="每天第一次分享免费领红包"
            android:textColor="#333333"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include layout="@layout/layout_base_share" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_share2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_dialog_share_friend"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="一键通知粉丝"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/shape_f7f7f7_r_20"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_ff333333"
        android:textSize="@dimen/font_larger" />

</LinearLayout>