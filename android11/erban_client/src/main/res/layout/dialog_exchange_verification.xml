<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="180dp"
              android:background="@drawable/shape_exchange_awards_dialog_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="请输入绑定手机的短信验证码"
        android:textColor="@color/text_1A1A1A"
        android:textSize="@dimen/text_size_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/dp_20">

        <EditText
            android:id="@+id/edt_exchange_verification"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_exchange_verification_edt"
            android:inputType="number"
            android:padding="@dimen/dp_5"/>

        <Button
            android:id="@+id/bu_exchange_verification_get_sms"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/shape_car_pay"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

    <Button
        android:id="@+id/bu_exchange_verification_submit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_car_pay"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</LinearLayout>