<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_gift_rllt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@mipmap/activity_gift_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:visibility="invisible">

        <TextView
            android:id="@+id/gift_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动礼物"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_title_tv"
            android:layout_marginTop="@dimen/dp_3"
            android:text="人气票只增加人气值，不增加财富值和魅力值"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_9" />

        <TextView
            android:id="@+id/introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_gift_63a7fc"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_6"
            android:text="玩法介绍"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_gift_rllt"
        android:background="@drawable/bg_dialog_gitf">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/ll_single_people"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gift_top_height"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="送给"
                        android:textColor="@color/color_99ffffff"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_100"
                        android:layout_toEndOf="@+id/tv_one"
                        android:background="@drawable/shape_30ffffff_30dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/iv_circle"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_default_avatar" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:drawablePadding="@dimen/dp_5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            tools:text="昵称1231" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/gift_dialog_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gift_top_height">

                    <FrameLayout
                        android:id="@+id/rl_all_mic"
                        android:layout_width="72dp"
                        android:layout_height="58dp"
                        android:layout_centerVertical="true">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp">

                            <View
                                android:id="@+id/view_bg"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_room_call_user_off" />

                            <ImageView
                                android:id="@+id/tv_gift_all"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/ic_gift_dialog_all_mic" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/cb_gift_all"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/selector_send_gift_people"
                            android:button="@null"
                            android:clickable="false"
                            android:gravity="center"
                            android:paddingBottom="1.2dp"
                            android:text="全麦"
                            android:textColor="@color/selector_gift_avatar_all_username"
                            android:textSize="@dimen/text_size_10" />
                    </FrameLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/avatar_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/rl_all_mic"
                        tools:itemCount="1"
                        tools:listitem="@layout/list_item_gift_avatar"
                        tools:showIn="@layout/dialog_bottom_gift" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white_transparent_50" />
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ll_gift_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/fl_top_view"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rg_gift_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_gift_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gift_rb_tab"
                        android:button="@null"
                        android:checked="true"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:text="礼物"
                        android:textColor="@color/selector_gift_index_color"
                        android:textSize="@dimen/text_size_14" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10" />

                    <RadioButton
                        android:id="@+id/rb_gift_pack_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gift_rb_tab"
                        android:button="@null"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:text="背包"
                        android:textColor="@color/selector_gift_index_color"
                        android:textSize="@dimen/text_size_14" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10" />

                    <RadioButton
                        android:id="@+id/rb_gift_dian_dian_coin_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gift_rb_tab"
                        android:button="@null"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:text="活动"
                        android:textColor="@color/selector_gift_index_color"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />

                </RadioGroup>

                <TextView
                    android:id="@+id/bag_all_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/gift_dialog_info_text"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/gift_dialog_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/shape_30ffffff_30dp"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/gift_user_info_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_above="@+id/gift_dialog_footer"
                android:layout_below="@id/ll_gift_indicator"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_gift_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_8">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/gift_layout_indicator"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8" />

                    <com.vslk.lbgx.room.gift.widget.PageIndicatorView
                        android:id="@+id/gift_layout_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_gift_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/gift_pack_empty_str"
                        android:textColor="@color/color_grey_999999" />

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/gift_dialog_footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gift_footer_height"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.vslk.lbgx.ui.widget.MarqueeTextView
                    android:id="@+id/text_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:drawableStart="@drawable/icon_gold"
                    android:drawablePadding="@dimen/dp_10"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="#99ffffff"
                    android:textSize="@dimen/text_size_14"
                    tools:text="3213213321" />

                <TextView
                    android:id="@+id/btn_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"
                    android:text="充值 >"
                    android:textColor="#60A6FF"
                    android:textSize="@dimen/text_size_14"
                    tools:ignore="SpUsage" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="30dp" />

                <RelativeLayout
                    android:id="@+id/gift_dialog_to_man_layout"
                    android:layout_width="@dimen/gift_to_man_layout_width"
                    android:layout_height="@dimen/gift_to_man_layout_height"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/shape_gift_to_all_round_bg"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gift_to_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/gift_to_text"
                        android:textColor="@color/white_alpha_30"
                        android:textSize="@dimen/dp_12"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/gift_man_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/gift_right_arrow"
                        android:layout_toEndOf="@+id/gift_to_text"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/dialog_gift_avatar_list_default_value"
                        android:textColor="@color/mm_theme"
                        android:textSize="@dimen/dp_12"
                        tools:ignore="SpUsage" />

                    <ImageView
                        android:id="@+id/gift_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/icon_gift_right_arrow" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gift_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/gift_amount_layout_height"
                        android:background="@mipmap/bg_send_gift_number"
                        android:drawableEnd="@drawable/ic_gift_number_top_arrow"
                        android:gravity="center"
                        android:paddingRight="7dp"
                        android:text="@string/gift_number_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/btn_send"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/gift_amount_layout_height"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:background="@mipmap/bg_send_gift"
                        android:gravity="center"
                        android:text="@string/gift_send_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        tools:ignore="SpUsage" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
