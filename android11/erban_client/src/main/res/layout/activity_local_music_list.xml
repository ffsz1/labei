<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#040C3F"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/transparent_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_50"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#40466D"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="@{click}"
                android:scaleType="center"
                android:src="@drawable/arrow_left_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我的本地音乐"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:onClick="@{click}"
                android:padding="@dimen/dp_15"
                android:scaleType="center"
                android:src="@drawable/icon_music_refresh" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/empty_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/music_box_layout"
            android:layout_below="@id/title_layout"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/empty_layout_music_add"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="@{click}"
                android:src="@drawable/icon_music_refresh_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="扫描本地音乐"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="只限MP3格式文件"
                android:textColor="#66FFFFFF"
                android:textSize="14dp" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_layout" />
    </RelativeLayout>
</layout>