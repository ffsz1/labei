<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">


    <LinearLayout
        android:id="@+id/logo_lly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@mipmap/logo_tv" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_lly"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wechat_login"
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="66dp"
            android:background="@drawable/shape_e6fff0_20dp"
            android:drawableLeft="@drawable/ic_login_option_wechat"
            android:gravity="center"
            android:paddingStart="87dp"
            android:paddingEnd="88dp"
            android:text="微信登录"
            android:textColor="@color/color_00CA52"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_qq_login"
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/shape_e6f8ff_20dp"
            android:drawableStart="@drawable/ic_login_option_qq"
            android:gravity="center"
            android:paddingStart="87dp"
            android:paddingEnd="88dp"
            android:text="QQ登录"
            android:textColor="@color/color_57CAF7"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_phone_login"
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/shape_c485ff_20dp"
            android:drawableStart="@drawable/ic_login_option_phone"
            android:gravity="center"
            android:paddingStart="87dp"
            android:paddingEnd="88dp"
            android:text="手机登录"
            android:textColor="@color/color_C280FF"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_check_box_login"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:text="登录注册即表示同意拉贝星球"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/color_FF81A4"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_self_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私协议》"
                android:textColor="@color/color_FF81A4"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_live_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《直播协议》"
                android:textColor="@color/color_FF81A4"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="暂不接受未成年用户注册，请确认您已满18岁"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>
</RelativeLayout>