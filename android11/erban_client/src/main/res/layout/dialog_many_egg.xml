<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fra_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/give_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="恭喜获得"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ticket"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_12"
            tools:text="额外获得100人气票" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_lottery_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_lottery_button"
            android:layout_below="@+id/tv_ticket"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10" />

        <LinearLayout
            android:id="@+id/ll_lottery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_gold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/bu_lottery_box_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lottery_x1_btn"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/bu_lottery_box_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/lottery_x10_btn"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/bu_lottery_box_fifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lottery_x50_btn"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hailuo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开心值："
                android:textColor="#FFEC00"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_gold_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="#FFEC00"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_lottery_box_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableEnd="@mipmap/ic_arrow_right_yellow"
                android:text="+开心 "
                android:textColor="#FFEC00"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pound_egg_closs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-40dp"
        android:src="@mipmap/lottery_close_btn" />
</RelativeLayout>