<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:background="@drawable/icon_find_family_item_bg_other"
    android:orientation="vertical"
    tools:layout_marginTop="@dimen/dp_20">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_26"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"/>


    <RelativeLayout
        android:id="@+id/info_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_default_avatar"/>

        <TextView
            android:id="@+id/family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toEndOf="@id/avatar"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="192dp"
            android:text="你知道自己是吗你知道自己是吗"
            android:textColor="@color/color_3C363E"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gold_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/family_name"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@id/avatar"
            android:drawableEnd="@drawable/icon_find_family_item_gold"
            android:drawablePadding="@dimen/dp_5"
            android:text="456726"
            android:textColor="@color/color_FECC32"
            android:textSize="@dimen/text_size_13"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_toEndOf="@id/avatar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_first"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:contentDescription="@null"
                android:src="@drawable/ic_default_avatar"/>

            <ImageView
                android:id="@+id/avatar_second"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_5"
                android:contentDescription="@null"
                android:src="@drawable/ic_default_avatar"/>

            <ImageView
                android:id="@+id/avatar_third"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_5"
                android:contentDescription="@null"
                android:src="@drawable/ic_default_avatar"/>

            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="81个成员"
                android:textColor="@color/color_A19FA2"
                android:textSize="@dimen/text_size_12"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/divid_line_style"
        android:layout_below="@id/info_content"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginEnd="@dimen/dp_17"/>

    <TextView
        android:id="@+id/family_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_content"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_20"
        android:drawableStart="@drawable/ic_item_dot"
        android:drawablePadding="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="直接申请，青铜以上，加入改马甲"
        android:textSize="@dimen/text_size_12"/>

</RelativeLayout>