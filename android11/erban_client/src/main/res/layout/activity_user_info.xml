<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLike"
            type="Boolean" />

        <variable
            name="isUserSelf"
            type="Boolean" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="userInfo"
            type="com.tongdaxing.xchat_core.user.bean.UserInfo" />

        <variable
            name="showBanner"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_view_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="@{isUserSelf?View.GONE:View.VISIBLE}">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_half"
                android:background="#f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_attention"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{click}"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/attention_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@{isLike ? @drawable/icon_new_attentioned : @drawable/icon_new_attention}"
                        tools:src="@drawable/icon_new_attention" />

                    <TextView
                        android:id="@+id/attention_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:text="@{isLike ? @string/main_attentioned : @string/main_attention}"
                        android:textColor="@{isLike ? @color/color_fffdbed8 : @color/color_ffff0066}"
                        android:textSize="@dimen/text_size_17"
                        tools:text="@string/main_attention"
                        tools:textColor="@color/color_ffff0066" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:background="@color/light" />

                <LinearLayout
                    android:id="@+id/send_msg_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:onClick="@{click}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/icon_userinfo_msg"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center"
                        android:text="私聊"
                        android:textColor="@color/color_ffff0066"
                        android:textSize="@dimen/text_size_17" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="305dp">

            <com.vslk.lbgx.ui.widget.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{showBanner ? View.VISIBLE : View.GONE}" />

            <ImageView
                android:id="@+id/userBigAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_37353B"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_info_default_bg"
                android:visibility="@{showBanner ? View.GONE : View.VISIBLE}" />

        </FrameLayout>

        <com.vslk.lbgx.ui.widget.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_view_layout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="305dp">

                    <ImageView
                        android:id="@+id/user_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginBottom="@dimen/dp_85"
                        android:contentDescription="@null"
                        android:onClick="@{click}"
                        android:src="@drawable/iv_find_him"
                        android:visibility="@{isUserSelf ? View.GONE : View.VISIBLE}" />

                    <ImageView
                        android:id="@+id/user_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginBottom="@dimen/dp_45"
                        android:contentDescription="@null"
                        android:onClick="@{click}"
                        android:src="@drawable/ic_user_room"
                        android:visibility="@{isUserSelf ? View.GONE : View.VISIBLE}" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-55dp">

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="bottom"
                        app:drawableType="shape"
                        app:leftTopRadius="@dimen/dp_16"
                        app:rightTopRadius="@dimen/dp_16" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_avatar"
                        app:riv_border_color="@color/white"
                        app:riv_border_width="4dp"
                        app:riv_oval="true" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/rl_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_8"
                        android:lines="1"
                        android:text="@{userInfo.nick}"
                        android:textColor="@color/color_1A1A1A"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold"
                        tools:text="这是名称" />

                    <LinearLayout
                        android:id="@+id/ids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_erban_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/me_user_id_null + userInfo.erbanNo}"
                            android:textColor="@color/color_A1A1A1"
                            android:textSize="@dimen/text_size_13"
                            tools:text="ceshi123" />

                        <com.vslk.lbgx.ui.widget.LevelView
                            android:id="@+id/level_view_user_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/fl_play_audio"
                        android:layout_width="160dp"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/gradient_shape"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{click}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_5"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_user_info_play" />

                        <ImageView
                            android:id="@+id/play_anim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_toEndOf="@id/play"
                            android:contentDescription="@null"
                            android:src="@drawable/icon_micro_match_record_default" />

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:text="@{userInfo.voiceDura + `s`}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12"
                            tools:text="11s" />

                    </RelativeLayout>

                </FrameLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp_25"
                    android:paddingBottom="@dimen/dp_25"
                    android:stretchColumns="*">

                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{String.valueOf(userInfo.followNum)}"
                                android:textColor="@color/color_1A1A1A"
                                android:textSize="@dimen/text_size_22"
                                tools:text="01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_2"
                                android:text="@string/main_attention"
                                android:textSize="@dimen/text_size_11" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{String.valueOf(userInfo.fansNum)}"
                                android:textColor="@color/color_1A1A1A"
                                android:textSize="@dimen/text_size_22"
                                tools:text="01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_2"
                                android:text="@string/fan"
                                android:textSize="@dimen/text_size_11" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{String.valueOf(userInfo.liveness)}"
                                android:textColor="@color/color_1A1A1A"
                                android:textSize="@dimen/text_size_22"
                                tools:text="01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_2"
                                android:text="活跃"
                                android:textSize="@dimen/text_size_11" />

                        </LinearLayout>

                    </TableRow>

                </TableLayout>

                <View
                    style="@style/divid_line_style"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_f5f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:drawableStart="@drawable/ic_user_desc"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="签名"
                        android:textColor="@color/title_212121"
                        android:textSize="@dimen/text_size_17"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vslk.lbgx.ui.widget.ExpandableTextView
                            android:id="@+id/expand_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/expand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:onClick="@{click}"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="更多"
                                android:textColor="@color/color_ffff0066" />

                            <ImageView
                                android:id="@+id/iv_expand"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="19dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_5"
                                android:src="@drawable/ic_expand_more" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:drawableStart="@drawable/ic_user_info"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="资料"
                        android:textColor="@color/title_212121"
                        android:textSize="@dimen/text_size_17"
                        android:textStyle="bold" />

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:id="@+id/tv_user_star"
                        style="@style/TextButtonGradientStyle_RED"
                        date="@{userInfo.birth}"
                        android:layout_width="@dimen/dp_57"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textSize="@dimen/text_size_13"
                        app:d_radius="@dimen/dp_10"
                        tools:text="水瓶座" />

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:id="@+id/tv_user_age"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_15"
                        android:drawableStart="@{userInfo.gender == 1 ? @drawable/ic_sex_male : @drawable/ic_sex_female}"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13"
                        android:visibility="@{userInfo.birth > 0 ? View.VISIBLE : View.GONE}"
                        app:d_radius="@dimen/dp_10"
                        app:drawableType="layer"
                        app:selectSoildColor="@color/color_ffff0066"
                        app:selectState="False"
                        app:soildColor="@color/color_ff02a6ff"
                        tools:background="@color/color_ffff0066"
                        tools:drawableStart="@drawable/ic_sex_male"
                        tools:text="15" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这家伙很懒，还没有上传相片哦！"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/photo_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <View
                    style="@style/divid_line_style"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/color_f5f5f5"
                    android:paddingTop="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:gravity="center_vertical"
                            android:text="收到的礼物"
                            android:textColor="@color/title_212121"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gift_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/title_212121"
                            android:textSize="@dimen/text_size_20"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp" />

                        <LinearLayout
                            android:id="@+id/ll_user_gift_empty"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/gift_empty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/content_empty"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center_horizontal"
                                android:text="暂没有收到礼物"
                                android:textColor="@color/text_color_secondary" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </com.vslk.lbgx.ui.widget.ObservableScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_user_info_title_bg"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="@{click}"
                android:scaleType="center"
                android:src="@drawable/icon_nav_back" />

            <ImageView
                android:id="@+id/tv_defriend"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:onClick="@{click}"
                android:paddingHorizontal="@dimen/dp_5"
                android:scaleType="center"
                android:src="@drawable/user_info_menu_white"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="@{!isUserSelf? View.VISIBLE : View.GONE}" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center"
                android:onClick="@{click}"
                android:src="@drawable/ic_user_info_edit"
                android:visibility="@{ isUserSelf? View.VISIBLE : View.GONE}" />

        </RelativeLayout>

    </RelativeLayout>

</layout>