<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:padding="7dp"
            android:src="@mipmap/ic_back_black_arrow" />

        <RadioGroup
            android:id="@+id/rg_gift_indicator"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_gift_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="true"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="兑换开心"
                android:textColor="@color/selector_diamonds_index_color"
                android:textSize="@dimen/text_size_16" />


            <RadioButton
                android:id="@+id/rb_gift_pack_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="领工资"
                android:textColor="@color/selector_diamonds_index_color"
                android:textSize="@dimen/text_size_16" />
        </RadioGroup>

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="规则"
            android:textColor="@color/back_font"
            android:textSize="16sp" />
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>