<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ranking_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@mipmap/bg_wealth_ranking" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_first_out"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80"
                android:background="@mipmap/caifu_first" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="@dimen/dp_8"
                android:padding="5dp"
                app:cardCornerRadius="37.5dp"
                app:cardElevation="0dp">

                <com.vslk.lbgx.ui.common.widget.CircleImageView
                    android:id="@+id/avatar_first"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_default_avatar" />

            </android.support.v7.widget.CardView>


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="100dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.vslk.lbgx.ui.widget.MarqueeTextView
                android:id="@+id/nickname_first"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxWidth="@dimen/dp_90"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="不会不" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:contentDescription="@null" />

                <com.vslk.lbgx.ui.widget.LevelView
                    android:id="@+id/level_view_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="110dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_ranking_room_header_second" />

            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <com.vslk.lbgx.ui.common.widget.CircleImageView
                    android:id="@+id/avatar_second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_default_avatar" />
            </android.support.v7.widget.CardView>


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.vslk.lbgx.ui.widget.MarqueeTextView
                android:id="@+id/nickname_second"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="不会不想不行不信" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gender_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:contentDescription="@null" />

                <com.vslk.lbgx.ui.widget.LevelView
                    android:id="@+id/level_view_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance_text_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_3"
                android:text="距离前一名"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_distance_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                tools:text="123123"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_ranking_room_header_third" />

            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <com.vslk.lbgx.ui.common.widget.CircleImageView
                    android:id="@+id/avatar_third"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_default_avatar" />
            </android.support.v7.widget.CardView>


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.vslk.lbgx.ui.widget.MarqueeTextView
                android:id="@+id/nickname_third"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                tools:text="不会不想不行不信" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gender_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:contentDescription="@null" />

                <com.vslk.lbgx.ui.widget.LevelView
                    android:id="@+id/level_view_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance_text_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_3"
                android:text="距离前一名"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_distance_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                tools:text="123123"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>