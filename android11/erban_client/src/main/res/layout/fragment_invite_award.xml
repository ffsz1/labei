<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="redPacketInfo"
            type="com.tongdaxing.xchat_core.redpacket.bean.RedPacketInfo" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.hncxco.library_ui.widget.AppToolBar
            android:id="@+id/toolbar"
            style="@style/AppToolBar_white_style"
            app:hasLine="true"
            app:title="邀请好友" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_invite_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_20"
                android:text="好友注册成功后"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="每笔充值你将获得高达"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="2%的红包分成"
                    android:textColor="#FFFDFF71"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="italic" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:text="你的专属邀请码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/erban_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_120"
                    android:text="000000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/clipboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:contentDescription="@null"
                    android:onClick="@{click}"
                    android:src="@drawable/ic_invite_clipboard" />

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/rly_people"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:onClick="@{click}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:text="已成功邀请的人数"
                android:textColor="@color/title_212121"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dp_16"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:drawablePadding="@dimen/dp_13"
                android:text="@{String.valueOf(redPacketInfo.registerCout) + ` 人`}"
                android:textColor="@color/title_212121"
                android:textSize="@dimen/text_size_17"
                tools:text="0人" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/rly_share_bonus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:onClick="@{click}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:text="已获得的邀请奖励"
                android:textColor="@color/title_212121"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_packet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dp_16"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:drawablePadding="@dimen/dp_13"
                android:text="@{String.valueOf(redPacketInfo.packetNum) + ` 元`}"
                android:textColor="#FFFF4242"
                android:textSize="@dimen/text_size_17"
                tools:text="0.00元" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_invite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/color_f5f5f5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:text="填写邀请码"
                android:textColor="@color/title_212121"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/inviteCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_35"
                android:textColor="@color/title_212121"
                android:textSize="@dimen/text_size_17"
                android:visibility="gone"
                tools:text="111112" />

            <TextView
                android:id="@+id/invite_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:drawablePadding="@dimen/dp_13"
                android:gravity="center_vertical"
                android:onClick="@{click}"
                android:paddingEnd="@dimen/dp_16"
                android:text="填写邀请码后好友才能获得奖励哦"
                android:textSize="@dimen/text_size_11" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/withdraw"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/selector_invite_with_draw"
                    android:enabled="@{redPacketInfo.packetNum >= 100 ? true : false}"
                    android:gravity="center"
                    android:onClick="@{click}"
                    android:text="去提现"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/invite"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@drawable/shape_gradient_invite_friend"
                    android:gravity="center"
                    android:onClick="@{click}"
                    android:text="邀请好友"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_25"
                android:drawableTop="@drawable/ic_invite_guide"
                android:drawablePadding="@dimen/dp_10"
                android:paddingStart="@dimen/dp_35"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_35"
                android:text="1.邀请好友注册并填写你的邀请码，即表示邀请成功。\n\n 2.邀请成功后，好友每次充值，你将获得充值的2%的现金分成。"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

    </LinearLayout>

</layout>
