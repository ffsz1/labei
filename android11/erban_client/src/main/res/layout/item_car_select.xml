<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_shop_item_normal_bg">

        <FrameLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_car_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    tools:src="@drawable/car_lock" />

                <TextView
                    android:id="@+id/tv_car_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textSize="@dimen/text_size_11"
                    tools:text="15å¤©" />

            </LinearLayout>

            <ImageView
                android:id="@+id/tv_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_10"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_shop_option_arrow_select"
                android:visibility="invisible" />

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_car_style"
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_88"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_car_try_out"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_car_style"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_car_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:drawableStart="@mipmap/ic_ranking_gold"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="888"
            android:textColor="@color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/remain_day_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/color_grey_999999"
        android:textSize="13sp"
        android:visibility="invisible" />
</LinearLayout>