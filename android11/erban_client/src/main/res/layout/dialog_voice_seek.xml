<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_voice_seek_height"
    android:background="@color/common_color_transparent_ff000000">

    <ImageView
        android:id="@+id/iv_music_more_close"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/icon_music_more_close" />

    <LinearLayout
        android:id="@+id/ll_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="音乐"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />

        <SeekBar
            android:id="@+id/music_voice_seek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:progress="50"
            android:progressDrawable="@drawable/music_voice_seekbar"
            android:thumb="@drawable/ic_room_voice_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/music_voice_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_50"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人声"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />

        <SeekBar
            android:id="@+id/voice_seek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:progress="50"
            android:progressDrawable="@drawable/music_voice_seekbar"
            android:thumb="@drawable/ic_room_voice_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/voice_number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>


</RelativeLayout>