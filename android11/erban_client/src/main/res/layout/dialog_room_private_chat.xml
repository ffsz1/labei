<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msg_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_list_height"
    app:cardCornerRadius="@dimen/dp_22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_height"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_list_title_height"
            android:background="@drawable/bg_room_chat_bar">

            <TextView
                android:id="@+id/tv_list_data_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iv_close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:src="@drawable/icon_close_dialog" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_list_title_diver"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:background="@color/app_bg"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fl_room_msg_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <View
            android:id="@+id/v_replace_nav"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>