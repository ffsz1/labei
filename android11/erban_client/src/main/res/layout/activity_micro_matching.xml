<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FAFAFA"
    android:orientation="vertical">
    <!--    style="@style/AppToolBar_transparent_style"-->
    <com.hncxco.library_ui.widget.AppToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hasRightImg="false"
        app:hasRightTitle="true"
        app:ivPadding="5dp"
        app:ivRightImgRes="@drawable/icon_micro_match_record"
        app:leftImgRes="@mipmap/icon_nav_black_back"
        app:rightTitle="录语音"
        app:rightTitleColor="@color/back_font"
        app:title="@string/speed_dating"
        app:titleColor="@color/back_font"
        app:titleSize="@dimen/text_size_17" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.tongdaxing.erban.libcommon.tinderstack.TinderStackLayout
            android:id="@+id/tsl_matchs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/error_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/content_empty"
            android:gravity="center"
            android:text="暂无速配的用户哦"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="45dp">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/icon_micro_match_delete" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_micro_match_like" />
    </LinearLayout>

</LinearLayout>