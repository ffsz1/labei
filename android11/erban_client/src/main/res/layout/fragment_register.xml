                    android:textColorHint="@color/color_C2C2C2"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/iv_pw_is_show_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
