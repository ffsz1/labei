                    android:hint="请确认密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_12"
