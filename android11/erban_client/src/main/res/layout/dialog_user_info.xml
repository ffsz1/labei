<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#35444B"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/shape_33ffffff_30dp"
        android:padding="@dimen/dp_5"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="更多"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_f6f6f8_top_15dp">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_toEndOf="@+id/nick"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_35"
            android:drawablePadding="@dimen/dialog_user_info_user_name_drawable_padding"
            android:ellipsize="end"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_20"
            tools:text="哇塞抱抱" />

        <com.vslk.lbgx.ui.widget.LevelView
            android:id="@+id/level_info_user_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nick"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_info_user_dialog"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_100"
            android:layout_toStartOf="@+id/ll_one"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/attention_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关注"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/fans_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    tools:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="活跃"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_info_user_dialog"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_erban_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_11"
                tools:text="ID：666699" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_copy"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105"
            android:layout_alignParentBottom="true">

            <FrameLayout
                android:id="@+id/ll_my_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/shape_ffffff_30dp"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_user_info_enter_my_room"
                    android:drawablePadding="@dimen/text_size_10"
                    android:text="进入我的空间"
                    android:textColor="@color/color_333333" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/otherUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_fffafafa_corner_15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_info_page_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_user_private_chat"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="私聊"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/follow_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_user_new_attention"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_send_gift"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_send_gift"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="打赏"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/rl_user_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_user_info_home"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="空间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_11" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_avatar_bg"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_marginBottom="205dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_border_color="@color/white"
            app:riv_border_width="@dimen/dp_5"
            app:riv_oval="true"
            tools:src="@drawable/ic_default_avatar" />


        <ImageView
            android:id="@+id/iv_headwear"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>