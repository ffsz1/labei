<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isVerify"
            type="Boolean"/>

        <import type="android.view.View"/>

        <variable
            name="info"
            type="com.tongdaxing.xchat_core.find.family.FamilyInfo"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.hncxco.library_ui.widget.AppToolBar
            android:id="@+id/toolbar"
            style="@style/AppToolBar_white_style"
            app:title="@string/family_manager"/>

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{isVerify ? View.GONE : View.VISIBLE}">

            <TextView
                android:id="@+id/kick_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:gravity="center_vertical"
                android:onClick="@{click}"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:text="踢出成员"
                android:textColor="@color/color_37353B"
                android:textSize="@dimen/text_size_18"/>

            <View
                style="@style/divid_line_style"
                android:layout_marginStart="@dimen/dp_16"/>

            <TextView
                android:id="@+id/vice_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:gravity="center_vertical"
                android:onClick="@{click}"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:text="设置副族长"
                android:textColor="@color/color_37353B"
                android:textSize="@dimen/text_size_18"
                android:visibility="@{info.roleStatus != 1 ? View.GONE : View.VISIBLE}"/>

            <View
                style="@style/divid_line_style"
                android:layout_marginStart="@dimen/dp_16"/>

            <TextView
                android:id="@+id/join_method"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                android:drawableEnd="@drawable/ic_next_arrow"
                android:gravity="center_vertical"
                android:onClick="@{click}"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:text="加入方式"
                android:textColor="@color/color_37353B"
                android:textSize="@dimen/text_size_18"
                android:visibility="@{info.roleStatus != 1 ? View.GONE : View.VISIBLE}"/>

            <View style="@style/divid_line_style"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{isVerify ? View.VISIBLE : View.GONE}"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/no_verify_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{click}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:text="无需验证"
                    android:textColor="@color/color_37353B"
                    android:textSize="@dimen/text_size_18"/>

                <ImageView
                    android:id="@+id/no_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:src="@drawable/ic_select_press"
                    android:visibility="@{info.verification == 0 ? View.VISIBLE : View.INVISIBLE}"/>

            </FrameLayout>

            <View
                style="@style/divid_line_style"
                android:layout_marginStart="@dimen/dp_16"/>

            <FrameLayout
                android:id="@+id/verify_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_57"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{click}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:text="审核通过"
                    android:textColor="@color/color_37353B"
                    android:textSize="@dimen/text_size_18"/>

                <ImageView
                    android:id="@+id/verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:src="@drawable/ic_select_press"
                    android:visibility="@{info.verification == 1 ? View.VISIBLE : View.INVISIBLE}"/>

            </FrameLayout>

            <View style="@style/divid_line_style"/>

        </LinearLayout>

    </LinearLayout>
</layout>