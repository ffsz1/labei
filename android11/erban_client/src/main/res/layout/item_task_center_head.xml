<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_diandian_coin"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="我的点点币"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_dian_dian_coin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            tools:text="123123" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sign_in"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:drawableStart="@drawable/ic_sign_in_title"
                android:drawablePadding="@dimen/dp_5"
                android:text="七天签到领福利"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_marginEnd="@dimen/dp_35"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:text="连续签到7天可获得礼物盒哦"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_task_center_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/dp_35"
            android:background="@drawable/ic_task_center_rule"
            android:gravity="center_horizontal|center_vertical"
            android:text="规则"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:text="趣味玩法"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_task_center_pk"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="点点大PK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:text="是你吗？天选之人"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lucky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_task_center_lucky"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="幸运点点抽"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:text="转起来 一切都是你的"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/bg_task_center_task_head"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:drawableStart="@drawable/ic_group_up_center"
            android:drawablePadding="@dimen/dp_6"
            android:text="成长中心"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:text="做任务得点点币  更多奖励等你拿"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

</LinearLayout>