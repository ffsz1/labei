<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_rankinglist_rich_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="100dp">


                <RadioGroup
                    android:id="@+id/rg_rich_charme_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bu_pay_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/filterselector"
                        android:button="@null"
                        android:checked="true"
                        android:text="财富榜"
                        android:textColor="@drawable/rb_insurance_filter_selector"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/bu_imcome_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/filterselector"
                        android:button="@null"
                        android:text="魅力榜"
                        android:textColor="@drawable/rb_insurance_filter_selector"
                        android:textSize="@dimen/sp_14" />
                </RadioGroup>

                <RelativeLayout
                    android:id="@+id/rl_rg_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_below="@id/rg_rich_charme_top"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/shape_rankinglist_rich_rg_bg_wrap"
                    android:gravity="center">


                    <RadioGroup
                        android:id="@+id/user_rank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_34"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:background="@drawable/shape_rankinglist_rich_rg_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rb_tab_day"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_weight="1"
                            android:background="@drawable/rangking_rich_tab_background"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="日榜"
                            android:textColor="@color/rb_rich_rangking_selector" />

                        <RadioButton
                            android:id="@+id/rb_tab_week"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/rangking_rich_tab_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="周榜"
                            android:textColor="@color/rb_rich_rangking_selector" />

                        <RadioButton
                            android:id="@+id/rb_tab_all"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:layout_weight="1"
                            android:background="@drawable/rangking_rich_tab_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="月榜"
                            android:textColor="@color/rb_rich_rangking_selector" />

                    </RadioGroup>
                </RelativeLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/rl_center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_jt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/bg_room_jt_cf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />


                    <LinearLayout
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_silver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12">

                            <ImageView
                                android:id="@+id/iv_silver_avatar"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="8dp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="68dp"
                                android:background="@drawable/img_yinkuang" />
                        </RelativeLayout>

                        <com.vslk.lbgx.ui.widget.MarqueeTextView
                            android:id="@+id/tv_silver_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="？？？"
                            android:textColor="@color/white_alpha_50" />

                        <TextView
                            android:id="@+id/tv_silver_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_ranking_gold"
                            android:drawablePadding="@dimen/dp_2"
                            android:lines="1"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_13"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/rl_center"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/iv_gold_avatar"
                                android:layout_marginTop="@dimen/dp_40"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                            <ImageView
                                android:id="@+id/iv_first_out"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_80"
                                android:background="@mipmap/caifu_first" />
                        </RelativeLayout>

                        <com.vslk.lbgx.ui.widget.MarqueeTextView
                            android:id="@+id/tv_gold_nick"
                            android:layout_marginTop="-10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="？？？"
                            android:textColor="@color/white_alpha_50"
                            android:textSize="@dimen/text_size_11" />


                        <com.vslk.lbgx.ui.widget.MarqueeTextView
                            android:id="@+id/tv_gold_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_ranking_gold"
                            android:drawablePadding="@dimen/dp_2"
                            android:lines="1"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_13"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_copper"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_68"
                            android:layout_marginTop="@dimen/dp_20">

                            <ImageView
                                android:id="@+id/iv_copper_avatar"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="8dp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="68dp"
                                android:background="@drawable/img_tongkuang" />
                        </RelativeLayout>

                        <com.vslk.lbgx.ui.widget.MarqueeTextView
                            android:id="@+id/tv_copper_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="？？？"
                            android:textColor="@color/white_alpha_50"
                            android:textSize="@dimen/text_size_11" />


                        <TextView
                            android:id="@+id/tv_copper_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_ranking_gold"
                            android:drawablePadding="@dimen/dp_2"
                            android:lines="1"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_13"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />
                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:background="@drawable/bg_room_cfb_cotent">

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/color_666666"
            android:textSize="15sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pay_income_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</LinearLayout>