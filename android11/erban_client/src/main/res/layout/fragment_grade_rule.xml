<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/grade_bg_llt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_ef8686_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_margin="20sp"
                android:contentDescription="@null"
                android:src="@drawable/ic_default_avatar"
                app:riv_border_color="@color/white"
                app:riv_border_width="@dimen/dp_2"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.vslk.lbgx.ui.widget.LevelView
                    android:id="@+id/level_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_21"
                        android:layout_marginEnd="@dimen/dp_21"
                        android:maxHeight="@dimen/dp_3"
                        android:progress="0"
                        android:progressDrawable="@drawable/grade_gold_seek_bar_shape"
                        android:splitTrack="false"
                        android:thumb="@null" />

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:id="@+id/startGrade"
                        android:layout_width="38dp"
                        android:layout_height="@dimen/dp_15"
                        android:gravity="center"
                        android:textColor="@color/color_ffff9eba"
                        android:textSize="@dimen/text_size_10"
                        app:d_radius="@dimen/dp_8"
                        app:drawableType="shape"
                        app:soildColor="@color/white"
                        tools:text="Lv.10" />

                    <com.hncxco.library_ui.widget.DrawableTextView
                        android:id="@+id/endGrade"
                        android:layout_width="38dp"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10"
                        app:d_radius="@dimen/dp_8"
                        app:drawableType="shape"
                        app:soildColor="#4dffffff"
                        tools:text="Lv.20" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/notify_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="距离升级还差50经验值，"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />

                    <TextView
                        android:id="@+id/explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级说明"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_lv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="1开心=1经验值，"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-140dp"
            android:background="@drawable/ic_user_ranking_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_33"
                android:layout_marginTop="@dimen/dp_35"
                android:drawablePadding="@dimen/dp_8"
                android:text="如何升级"
                android:textColor="@color/color_ff2d3a47"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@drawable/lv_ranking_gift" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_17"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gave_gift_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff2d3a47"
                        android:textSize="@dimen/text_size_13"
                        tools:text="@string/charm_info" />

                    <TextView
                        android:id="@+id/gold_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textSize="@dimen/text_size_12"
                        tools:text="@string/gold_tips" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_lv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@mipmap/img_cflv_des" />
    </LinearLayout>

</layout>