<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_task_list_gold"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginEnd="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_task_list_btn"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/ic_get_task"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_toStartOf="@+id/tv_task_list_btn"
        android:layout_toEndOf="@id/iv_task_list_gold"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14"
            tools:text="xxxx" />

        <TextView
            android:id="@+id/tv_task_list_gold_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="bottom"
            tools:text="点点币 +0"
            android:textColor="@color/color_7C1DFF"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
</RelativeLayout>