<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/gift_image_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7.5dp"
        android:background="@drawable/bg_gift_dialog_unselect">

        <TextView
            android:id="@+id/tv_free_gift_count"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#55ffffff"
            android:textSize="@dimen/text_size_9"
            tools:text="x4580" />

        <ImageView
            android:id="@+id/gift_image"
            android:layout_width="@dimen/gift_image_width"
            android:layout_height="@dimen/gift_image_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5" />

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gift_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            tools:ignore="SpUsage"
            tools:text="小太阳" />

        <TextView
            android:id="@+id/gift_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gift_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_gift_gold_coin_small"
            android:drawablePadding="@dimen/dp_3"
            android:text="@string/gift_gold_init"
            android:textColor="@color/color_99ffffff"
            android:textSize="@dimen/dp_10"
            tools:ignore="SpUsage"
            tools:text="1开心" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_gift_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/icon_gift_new"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_gift_limit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/icon_gift_limit_time"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/icon_gift_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_gift_effect"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_room_gift_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:src="@drawable/icon_room_gift_select"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>