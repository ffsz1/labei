<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="487dp"
    app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/ic_big_list_title_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bu_pay_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="财富榜"
                android:textColor="@color/selector_contribution_rank_color"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/bu_imcome_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="魅力榜"
                android:textColor="@color/selector_contribution_rank_color"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/user_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8">

            <RadioButton
                android:id="@+id/rb_tab_day"
                style="@style/img_indicator_style"
                android:checked="true"
                android:text="日榜"/>

            <RadioButton
                android:id="@+id/rb_tab_week"
                style="@style/img_indicator_style"
                android:text="周榜"/>

            <RadioButton
                android:id="@+id/rb_tab_all"
                style="@style/img_indicator_style"
                android:text="总榜"/>

        </RadioGroup>

        <View style="@style/divid_line_style"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="暂无数据"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pay_income_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>