<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/iv_close"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_finger_guessing_game_pk" />

    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_65"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_head1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxWidth="@dimen/dp_70"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            tools:text="杀手" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginEnd="@dimen/dp_30"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_head2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_70"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            tools:text="杀冷" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_below="@+id/two"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_23"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_rock"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:background="@drawable/ic_finger_guessing_game_selected">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_rock" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_scissors"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_scissors" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_paper"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_finger_guessing_game_select">

            <ImageView
                android:layout_width="@dimen/dp_75"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_finger_guessing_game_paper" />
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@drawable/ic_finger_guessing_game_pk" />

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/color_FFD83B"
            android:textSize="@dimen/text_size_18"
            tools:text="X 12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg"
        android:layout_marginStart="73dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="73dp"
        android:background="@drawable/bg_btn_login_selected"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</RelativeLayout>