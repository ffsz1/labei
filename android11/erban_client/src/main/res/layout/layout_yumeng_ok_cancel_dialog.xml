<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_yumeng_dialog_white_r_19"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:text="退出家族风险告知"
        android:textColor="@color/color_37353B"
        android:textSize="@dimen/text_size_19"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message"
        style="@style/DialogMsgText"
        android:textColor="@color/color_37353B"
        android:textSize="@dimen/text_size_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_yumeng_dialog_cancel_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_8"
            android:text="取消"
            android:textColor="#FF49464B"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp_35"
            android:background="@drawable/shape_yumeng_dialog_confirm_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_8"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

</LinearLayout>
