<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_msg">


    <com.hncxco.library_ui.widget.DrawableTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:gravity="right"
        android:paddingTop="@dimen/dp_35"
        android:paddingRight="@dimen/dp_15"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:angle="LEFT_RIGHT"
        app:drawableType="gradient" />

    <TextView
        android:id="@+id/tv_ignore_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_15"
        android:text="忽略未读"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <android.support.design.widget.TabLayout
        android:id="@+id/msg_tab"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/title"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:background="@color/transparent"
        app:tabBackground="@color/transparent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/transparent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_tab"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/bg_msg_content"
        android:paddingTop="20dp">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


</RelativeLayout>