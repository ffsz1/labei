<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.juxiao.xchat.dao.room.RoomConfDao">

    <select id="getRoomConf" parameterType="long" resultType="com.juxiao.xchat.dao.room.dto.RoomConfDTO">
      <![CDATA[
      SELECT
        `room_uid` AS roomUid,
        `room_type` AS roomType,
        `draw_type` AS drawType,
        `charm_enable` AS charmEnable
      FROM
        `room_conf`
      WHERE
        `room_uid` = #{roomUid}
      ]]>
    </select>
</mapper>