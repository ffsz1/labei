        ]]>
    </select>

    <select id="roomRank" resultType="com.juxiao.xchat.dao.item.domain.RankActDO" parameterType="com.juxiao.xchat.dao.item.query.RoomRankQuery">
        SELECT
            u.uid,
            u.erban_no AS erbanNo,
            u.nick,
            u.avatar,
            SUM(o.sum_gold) AS total
        FROM
          one_day_room_recv_sum o
        LEFT JOIN users u ON o.uid = u.uid
        LEFT JOIN room r ON r.uid = o.uid
        WHERE
            r.is_permit_room = 1
            AND DATE(o.create_time) = #{date}
            AND r.tag_id = #{tagId}
        GROUP BY
          o.uid
        ORDER BY
          total DESC
        limit #{total};
    </select>

