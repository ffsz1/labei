    <select id="getUserSendTotalGold" parameterType="long" resultType="com.juxiao.xchat.dao.item.dto.UserTotalGoldDTO">
        <![CDATA[


          SELECT
            `send_uid` AS `uid`,
            SUM(`sum_gold`) AS `totalGoldNum`
          FROM
            `one_day_room_send_sum`
          WHERE
            send_uid=#{uid}


        ]]>
    </select>

    <select id="getUserReceiveTotalGold" parameterType="long" resultType="com.juxiao.xchat.dao.item.dto.UserTotalGoldDTO">
        <![CDATA[


          SELECT
            `recv_uid` AS `uid`,
            SUM(`sum_gold`) AS `totalGoldNum`
          FROM
            `one_day_room_recv_sum`
          WHERE
