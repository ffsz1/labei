<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.juxiao.xchat.dao.event.ActivityHtmlDAO">
    <resultMap id="BaseResultMap" type="com.juxiao.xchat.dao.event.dto.ActivityHtmlDTO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="activity_id" property="activityId" jdbcType="VARCHAR"/>
        <result column="activity_name" property="activityName" jdbcType="VARCHAR"/>
        <result column="activity_image" property="activityImage" jdbcType="VARCHAR"/>
        <result column="activity_status" property="activityStatus" jdbcType="VARCHAR"/>
        <result column="activity_share_image" property="activityShareImage" jdbcType="VARCHAR"/>
        <result column="activity_share_title" property="activityShareTitle" jdbcType="VARCHAR"/>
        <result column="activity_share_content" property="activityShareContent" jdbcType="VARCHAR"/>
        <result column="activity_link" property="activityLink" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="admin_id" property="adminId" jdbcType="BIGINT"/>
    </resultMap>
    <select id="queryActivity" resultType="com.juxiao.xchat.dao.event.dto.ActivityHtmlDTO">
        select id, activity_id, activity_name, activity_image, activity_status, activity_share_image, activity_share_title,
        activity_share_content, activity_link, create_time, update_time, admin_id
        from activity_html
        <where>
            <if test="activityId != null and activityId != ''">
                and activity_id = #{activityId}
            </if>
        </where></select>
</mapper>
