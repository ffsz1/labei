<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.juxiao.xchat.dao.user.StatPacketRegisterDao">
    <resultMap id="StatPacketRegisterResultMap" type="com.juxiao.xchat.dao.user.dto.StatPacketRegisterDTO">
        <id column="register_id" property="registerId" jdbcType="VARCHAR"/>
        <result column="uid" property="uid" jdbcType="BIGINT"/>
        <result column="register_uid" property="registerUid" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="save" parameterType="com.juxiao.xchat.dao.user.domain.StatPacketRegisterDO">
        <![CDATA[ INSERT INTO `stat_packet_register` ]]>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="registerId != null">
                register_id,
            </if>
            <if test="uid != null">
                uid,
            </if>
            <if test="registerUid != null">
                register_uid,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="registerId != null">
                #{registerId,jdbcType=VARCHAR},
            </if>
            <if test="uid != null">
                #{uid,jdbcType=BIGINT},
            </if>
            <if test="registerUid != null">
                #{registerUid,jdbcType=BIGINT},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <select id="getShareRegister" parameterType="long" resultMap="StatPacketRegisterResultMap">
        SELECT
          `register_id`, `uid`, `register_uid`, `create_time`
        FROM
          `stat_packet_register`
        WHERE
          `register_uid` = #{registerUid}
        limit 1
    </select>
</mapper>